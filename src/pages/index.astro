  <script>
    // UTM-Builder Funktion f√ºr Client-side
    function buildAffiliateUrl(baseUrl, campaign, content, toolName = '') {
      const params = new URLSearchParams({
        utm_source: 'aitoolvault',
        utm_medium: 'affiliate', 
        utm_campaign: campaign,
        utm_content: content,
        ...(toolName && { utm_term: toolName.toLowerCase().replace(/\s+/g, '_') })
      });
      
      const separator = baseUrl.includes('?') ? '&' : '?';
      return `${baseUrl}${separator}${params.toString()}`;
    }

    document.addEventListener('DOMContentLoaded', function() {
      console.log('üöÄ AI Tool Vault Homepage loaded successfully');

      // ===== ADSENSE INITIALIZATION =====
      function initAdSense() {
        const ads = document.querySelectorAll('.adsbygoogle');
        console.log(`üí∞ Found ${ads.length} AdSense slots`);
        
        // Lazy loading f√ºr bessere Performance
        const observer = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting && !entry.target.getAttribute('data-loaded')) {
              try {
                (adsbygoogle = window.adsbygoogle || []).push({});
                entry.target.setAttribute('data-loaded', 'true');
                console.log('üí∞ AdSense slot loaded');
              } catch (e) {
                console.warn('AdSense loading error:', e);
              }
              observer.unobserve(entry.target);
            }
          });
        }, { threshold: 0.1 });
        
        ads.forEach(ad => observer.observe(ad));
      }

      // ===== AFFILIATE LINK TRACKING =====
      function trackAffiliateClick(toolName, campaign, content, url, position = null) {
        console.log(`üí∞ AFFILIATE CLICK: ${toolName} - Campaign: ${campaign} - Content: ${content}`);
        
        // Google Analytics Enhanced Ecommerce
        if (typeof gtag !== 'undefined') {
          gtag('event', 'affiliate_click', {
            'tool_name': toolName,
            'campaign': campaign,
            'content': content,
            'position': position,
            'affiliate_url': url,
            'value': 15.00,
            'currency': 'EUR'
          });
          
          gtag('event', 'purchase', {
            'transaction_id': `${Date.now()}_${toolName}`,
            'value': 15.00,
            'currency': 'EUR',
            'items': [{
              'item_id': toolName.toLowerCase().replace(/\s+/g, '_'),
