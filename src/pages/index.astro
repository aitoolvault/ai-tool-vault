        initFeaturedToolsTracking(); // AFFILIATE TRACKING
        initCTATracking(); // ALLGEMEINE CTA TRACKING
        initMobileMenu();
        
        console.log('‚úÖ Homepage erfolgreich initialisiert!');
        console.log(`üí∞ AdSense mit ID: ca-pub-5595876978844902 aktiv`);
        console.log(`üí∞ ${document.querySelectorAll('.tool-cta-secondary').length} Affiliate-Links mit UTM-Tracking aktiv`);
        
      } catch (error) {
        console.error('‚ùå Fehler bei der Initialisierung:', error);
        
        if (typeof gtag !== 'undefined') {
          gtag('event', 'init_error', { 
