            this.innerHTML = '‚úï';
          } else {
            navLinks.style.display = 'none';
            this.innerHTML = '‚ò∞';
          }
        });
      }

      // ===== INITIALISIERUNG =====
      try {
        initAdSense(); // ADSENSE ZUERST
