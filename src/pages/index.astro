      }

      // ===== KATEGORIE-NAVIGATION =====
      function initCategoryNavigation() {
        const categoryCards = document.querySelectorAll('.category-card[data-category]');
        
        categoryCards.forEach((card, index) => {
          const categoryName = card.getAttribute('data-category');
          const position = card.getAttribute('data-position') || index + 1;
          
          if (!categoryName) return;
          
          card.addEventListener('click', function(e) {
            e.preventDefault();
            
            console.log(`üîó Kategorie "${categoryName}" geklickt (Position: ${position})`);
            
            // Visual Feedback
            this.style.transform = 'scale(0.95)';
            this.style.background = '#f8faff';
            
            setTimeout(() => {
              this.style.transform = '';
              this.style.background = '';
            }, 150);
            
            // Analytics tracking
            if (typeof gtag !== 'undefined') {
              gtag('event', 'category_click', {
                category: categoryName,
                position: position,
                source: 'homepage'
              });
            }
            
            // Navigation
            const toolsUrl = buildAffiliateUrl(
              `/tools?category=${encodeURIComponent(categoryName)}`,
              'category_navigation',
              `category_${categoryName.toLowerCase().replace(/\s+/g, '_')}_position_${position}`,
              categoryName
            );
            
            window.location.href = toolsUrl;
          });
          
          // Accessibility
          card.setAttribute('role', 'button');
          card.setAttribute('tabindex', '0');
          
          card.addEventListener('keydown', function(e) {
            if (e.key === 'Enter' || e.key === ' ') {
              e.preventDefault();
