  <!-- JavaScript für Tracking und AdSense -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      
      // ===== ADSENSE INITIALIZATION =====
      function initAdSense() {
        const ads = document.querySelectorAll('.adsbygoogle');
        
        const observer = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting && !entry.target.getAttribute('data-loaded')) {
              try {
                (adsbygoogle = window.adsbygoogle || []).push({});
                entry.target.setAttribute('data-loaded', 'true');
              } catch (e) {
                console.warn('AdSense loading error:', e);
              }
              observer.unobserve(entry.target);
            }
          });
        }, { threshold: 0.1 });
        
        ads.forEach(ad => observer.observe(ad));
      }

      // ===== AFFILIATE LINK TRACKING =====
      function trackAffiliateClick(toolName, position, url) {
        if (typeof gtag !== 'undefined') {
          gtag('event', 'affiliate_click', {
            'tool_name': toolName,
            'position': position,
            'affiliate_url': url,
            'source': 'homepage_featured',
            'value': 15.00,
            'currency': 'EUR'
          });
          
          gtag('event', 'purchase', {
            'transaction_id': `${Date.now()}_${toolName}`,
            'value': 15.00,
            'currency': 'EUR',
            'items': [{
              'item_id': toolName.toLowerCase().replace(/\s+/g, '_'),
              'item_name': toolName,
              'item_category': 'homepage_featured',
              'quantity': 1,
              'price': 15.00
            }]
          });
        }
      }

      // ===== FEATURED TOOLS CTA TRACKING =====
      // Track Details Buttons
      document.querySelectorAll('.tool-cta-primary').forEach((cta, index) => {
        cta.addEventListener('click', function() {
          const toolName = this.getAttribute('data-tool') || 'Unknown';
          
          if (typeof gtag !== 'undefined') {
            gtag('event', 'tool_details_click', {
              tool_name: toolName,
              position: index + 1,
              source: 'homepage_featured'
            });
          }
        });
      });
      
      // Track Affiliate Buttons
      document.querySelectorAll('.tool-cta-secondary').forEach((cta, index) => {
        cta.addEventListener('click', function() {
          const toolName = this.getAttribute('data-tool') || 'Unknown';
          const position = this.getAttribute('data-position') || index + 1;
          const url = this.href;
          
          trackAffiliateClick(toolName, position, url);
        });
      });

      // ===== KATEGORIE-NAVIGATION =====
      const categoryCards = document.querySelectorAll('.category-card[data-category]');
      
      categoryCards.forEach((card, index) => {
        const categoryName = card.getAttribute('data-category');
        const position = card.getAttribute('data-position') || index + 1;
        
        if (!categoryName) return;
        
        card.addEventListener('click', function(e) {
          e.preventDefault();
          
          // Visual Feedback
          this.style.transform = 'scale(0.98)';
          
          setTimeout(() => {
            this.style.transform = '';
          }, 150);
          
          // Analytics tracking
          if (typeof gtag !== 'undefined') {
            gtag('event', 'category_click', {
              category: categoryName,
              position: position,
              source: 'homepage'
            });
          }
          
          // Navigation
          window.location.href = `/tools?category=${encodeURIComponent(categoryName)}`;
        });
        
        // Accessibility
        card.setAttribute('role', 'button');
        card.setAttribute('tabindex', '0');
        
        card.addEventListener('keydown', function(e) {
          if (e.key === 'Enter' || e.key === ' ') {
            e.preventDefault();
            this.click();
          }
        });
      });

      // ===== CTA BUTTON TRACKING =====
      // Hero CTA
      document.querySelectorAll('.hero-cta').forEach(cta => {
        cta.addEventListener('click', function() {
          if (typeof gtag !== 'undefined') {
            gtag('event', 'hero_cta_click', {
              button_text: this.textContent.trim(),
              destination: this.href
            });
          }
        });
      });

      // View All Button
      document.querySelectorAll('.view-all-btn').forEach(cta => {
        cta.addEventListener('click', function() {
          if (typeof gtag !== 'undefined') {
            gtag('event', 'view_all_click', {
              button_text: this.textContent.trim(),
              section: 'featured_tools'
            });
          }
        });
      });

      // Bottom CTA
      document.querySelectorAll('.cta-button').forEach(cta => {
        cta.addEventListener('click', function() {
          if (typeof gtag !== 'undefined') {
            gtag('event', 'bottom_cta_click', {
              button_text: this.textContent.trim(),
              section: 'final_conversion'
            });
          }
        });
      });

      // ===== MOBILE MENU =====
      const mobileMenuBtn = document.querySelector('.mobile-menu');
      const navLinks = document.querySelector('.nav-links');
      
      if (mobileMenuBtn && navLinks) {
        let menuOpen = false;
        
        mobileMenuBtn.addEventListener('click', function(e) {
          e.stopPropagation();
          menuOpen = !menuOpen;
          
          if (menuOpen) {
            navLinks.style.display = 'flex';
            navLinks.style.position = 'absolute';
            navLinks.style.top = '100%';
            navLinks.style.left = '0';
            navLinks.style.right = '0';
            navLinks.style.background = 'white';
            navLinks.style.flexDirection = 'column';
            navLinks.style.padding = '1rem';
            navLinks.style.boxShadow = '0 5px 15px rgba(0,0,0,0.1)';
            navLinks.style.zIndex = '999';
            this.innerHTML = '✕';
          } else {
            navLinks.style.display = 'none';
            this.innerHTML = '☰';
          }
        });
        
        // Close menu when clicking outside
        document.addEventListener('click', function() {
          if (menuOpen) {
            navLinks.style.display = 'none';
            mobileMenuBtn.innerHTML = '☰';
            menuOpen = false;
          }
        });
      }

      // ===== INITIALISIERUNG =====
      initAdSense();
    });
  </script>

