const featuredToolNames = ["ChatGPT", "Claude", "DALL-E 3", "Midjourney", "GitHub Copilot", "ElevenLabs"];
const featuredTools = tools.length > 0 
  ? tools.filter(tool => featuredToolNames.includes(tool.data.title)).slice(0, 6)
