  <script>
    // Type definitions für bessere IDE-Unterstützung
    interface CategoryData {
      category: string;
      position: number;
      source: string;
    }

    interface AnalyticsEvent {
      [key: string]: string | number;
    }

    document.addEventListener('DOMContentLoaded', function() {
      console.log('🚀 AI Tool Vault Homepage loaded successfully');

      // ===== KATEGORIE-NAVIGATION (KERNFUNKTION) =====
      function initCategoryNavigation(): void {
        const categoryCards = document.querySelectorAll<HTMLElement>('.category-card[data-category]');
        
        if (categoryCards.length === 0) {
          console.warn('⚠️ Keine Kategorie-Karten gefunden');
          return;
        }
        
        categoryCards.forEach((card, index) => {
          const categoryName = card.getAttribute('data-category');
          
          if (!categoryName) {
            console.warn(`⚠️ Kategorie-Name fehlt für Karte ${index + 1}`);
            return;
          }
          
          // Debugging: Zeige alle gefundenen Kategorien
          console.log(`📂 Kategorie ${index + 1}: "${categoryName}"`);
          
          card.addEventListener('click', function(e: Event) {
            e.preventDefault();
            
            console.log(`🔗 Kategorie "${categoryName}" geklickt (Position: ${index + 1})`);
            
            // Visual Feedback
            this.style.transform = 'scale(0.95)';
            this.style.background = '#f8faff';
            
            const resetStyles = () => {
              this.style.transform = '';
              this.style.background = '';
            };
            
            setTimeout(resetStyles, 150);
            
            // Analytics tracking
            try {
              trackEvent('category_click', {
                category: categoryName,
                position: index + 1,
                source: 'homepage'
              });
            } catch (error) {
              console.warn('⚠️ Analytics tracking failed:', error);
            }
            
            // Navigation zur Tools-Seite mit Kategorie-Filter
            const toolsUrl = `/tools?category=${encodeURIComponent(categoryName)}`;
            console.log(`🎯 Navigiere zu: ${toolsUrl}`);
            
            // Navigation ausführen
            window.location.href = toolsUrl;
          });
          
          // Keyboard accessibility
          card.addEventListener('keydown', function(e: KeyboardEvent) {
            if (e.key === 'Enter' || e.key === ' ') {
              e.preventDefault();
              (this as HTMLElement).click();
            }
          });
          
          // Accessibility attributes
          card.setAttribute('role', 'button');
          card.setAttribute('tabindex', '0');
          
          const countElement = card.querySelector('.category-count');
          const countText = countElement ? countElement.textContent : '';
          card.setAttribute('aria-label', `${categoryName} Kategorie öffnen - ${countText}`);
        });
        
        console.log(`✅ ${categoryCards.length} Kategorie-Karten erfolgreich initialisiert`);
      }

      // ===== FEATURED TOOLS CTA TRACKING =====
      function initFeaturedToolsTracking(): void {
        // Track Details & Test Buttons
        document.querySelectorAll<HTMLAnchorElement>('.tool-cta-primary').forEach((cta, index) => {
          cta.addEventListener('click', function() {
            const toolName = this.closest('.tool-card')?.querySelector('.tool-title')?.textContent || 'Unknown';
            
            trackEvent('tool_details_click', {
              tool_name: toolName,
              position: index + 1,
              source: 'homepage_featured'
            });
            
            console.log(`📋 Details-Button geklickt: ${toolName}`);
          });
        });
        
        // Track Direct Test Buttons
        document.querySelectorAll<HTMLAnchorElement>('.tool-cta-secondary').forEach((cta, index) => {
          cta.addEventListener('click', function() {
            const toolName = this.closest('.tool-card')?.querySelector('.tool-title')?.textContent || 'Unknown';
            
            trackEvent('affiliate_click', {
              tool_name: toolName,
              position: index + 1,
              source: 'homepage_featured',
              cta_type: 'direct_test'
            });
            
            console.log(`💰 Affiliate-Link geklickt: ${toolName} - ${this.href}`);
          });
        });
      }

      // ===== NAVBAR SCROLL EFFECTS =====
      function initNavbarEffects(): void {
        let lastScrollTop = 0;
        const navbar = document.querySelector<HTMLElement>('.nav');
        let ticking = false;

        if (!navbar) {
          console.warn('⚠️ Navbar nicht gefunden');
          return;
        }

        function updateNavbar(): void {
          const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
          
          if (scrollTop > lastScrollTop && scrollTop > 100) {
            navbar.style.transform = 'translateY(-100%)';
          } else {
            navbar.style.transform = 'translateY(0)';
          }
          
          if (scrollTop > 50) {
            navbar.style.background = 'rgba(255, 255, 255, 0.98)';
            navbar.style.boxShadow = '0 2px 20px rgba(0,0,0,0.1)';
          } else {
            navbar.style.background = 'rgba(255, 255, 255, 0.95)';
            navbar.style.boxShadow = 'none';
          }
          
          lastScrollTop = scrollTop;
          ticking = false;
        }

        window.addEventListener('scroll', function() {
          if (!ticking) {
            requestAnimationFrame(updateNavbar);
            ticking = true;
          }
        });
      }

      // ===== MOBILE MENU =====
      function initMobileMenu(): void {
        const mobileMenuBtn = document.querySelector<HTMLButtonElement>('.mobile-menu');
        const navLinks = document.querySelector<HTMLElement>('.nav-links');
        
        if (!mobileMenuBtn || !navLinks) {
          return;
        }
        
        let menuOpen = false;
        
        mobileMenuBtn.addEventListener('click', function(e: Event) {
          e.stopPropagation();
          menuOpen = !menuOpen;
          
          if (menuOpen) {
            navLinks.classList.add('show');
            this.innerHTML = '✕';
            this.setAttribute('aria-expanded', 'true');
          } else {
            navLinks.classList.remove('show');
            this.innerHTML = '☰';
            this.setAttribute('aria-expanded', 'false');
          }
        });
        
        document.addEventListener('click', function(e: Event) {
          const target = e.target as HTMLElement;
          if (menuOpen && !target.closest('.nav')) {
            navLinks.classList.remove('show');
            mobileMenuBtn.innerHTML = '☰';
            mobileMenuBtn.setAttribute('aria-expanded', 'false');
            menuOpen = false;
          }
        });
      }

      // ===== SCROLL ANIMATIONEN =====
      function initScrollAnimations(): void {
        const observerOptions: IntersectionObserverInit = {
          threshold: 0.1,
          rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver(function(entries) {
          entries.forEach((entry, index) => {
            if (entry.isIntersecting) {
              const delay = index * 100;
              
              setTimeout(() => {
                (entry.target as HTMLElement).classList.add('animated');
              }, delay);
              
              observer.unobserve(entry.target);
            }
          });
        }, observerOptions);

        document.querySelectorAll('.animate-on-scroll').forEach(el => {
          observer.observe(el);
        });
      }

      // ===== ANALYTICS TRACKING =====
      function trackEvent(eventType: string, data: AnalyticsEvent): void {
        try {
          console.log('📊 Event tracked:', eventType, data);
          
          if (typeof (window as any).gtag !== 'undefined') {
            (window as any).gtag('event', eventType, data);
          }
          
          if (typeof (window as any).plausible !== 'undefined') {
            (window as any).plausible(eventType, { props: data });
          }
        } catch (error) {
          console.warn('⚠️ Analytics tracking failed:', error);
        }
      }

      // ===== INITIALISIERUNG =====
      try {
        initCategoryNavigation(); // WICHTIGSTE FUNKTION
        initFeaturedToolsTracking(); // NEUE FUNKTION
        initNavbarEffects();
        initMobileMenu();
        initScrollAnimations();
        
        console.log('✅ Homepage erfolgreich initialisiert!');
        
      } catch (error) {
        console.error('❌ Fehler bei der Initialisierung:', error);
        trackEvent('init_error', { 
          message: error instanceof Error ? error.message : 'Unknown error' 
        });
      }
    });
  </script>

