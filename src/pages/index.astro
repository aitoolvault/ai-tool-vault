// TypeScript-sichere Kategorie-Definition
interface Category {
  name: string;
  icon: string;
  count: number;
}

const allCategories: Category[] = [
  { name: "Textgenerierung", icon: "📝", count: tools.filter(t => t.data?.category === "Textgenerierung").length || 15 },
  { name: "Bildgenerierung", icon: "🎨", count: tools.filter(t => t.data?.category === "Bildgenerierung").length || 12 },
