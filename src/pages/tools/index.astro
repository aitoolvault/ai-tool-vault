          </div>
        </div>

        <!-- AdSense #2: Nach jedem 6. Tool -->
        {(index + 1) % 6 === 0 && (
          <div class="ad-container ad-in-grid">
            <ins class="adsbygoogle"
                 style="display:block"
                 data-ad-format="fluid"
                 data-ad-layout-key="-fb+5w+4e-db+86"
