        .filter-results {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-top: 1.5rem;
            border-top: 1px dashed var(--border-secondary);
        }

        .result-count {
            font-weight: 600;
            color: var(--text-secondary);
        }

        .clear-btn {
            background: none;
            border: none;
            color: var(--error-color);
            cursor: pointer;
            font-size: 0.9rem;
            font-weight: 500;
            text-decoration: underline;
            transition: color 0.2s ease;
        }

        .clear-btn:hover {
            color: #dc2626;
        }

        /* Tools Grid */
        .grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 2rem;
        }

        .card h3 {
            font-size: 1.4rem;
            margin-bottom: 0.75rem;
            color: var(--text-primary);
            line-height: 1.3;
        }

        .card p {
            font-size: 0.95rem;
            color: var(--text-secondary);
            margin-bottom: 1rem;
            flex-grow: 1; /* Allow description to take available space */
        }

        .card-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1rem;
        }

        .category-badge {
            background: var(--accent-primary);
            color: white;
            padding: 0.3rem 0.7rem;
            border-radius: 6px;
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
        }

        /* Dynamic Category Colors (Example) */
        .category-textgenerierung { background-color: #3b82f6; } /* Blue */
        .category-bildgenerierung { background-color: #ef4444; } /* Red */
        .category-videobearbeitung { background-color: #10b981; } /* Green */
        .category-coding { background-color: #f59e0b; } /* Yellow */
        .category-marketing { background-color: #8b5cf6; } /* Purple */
        .category-audio { background-color: #ec4899; } /* Pink */
        .category-datenanalyse { background-color: #14b8a6; } /* Teal */
        .category-chatbot { background-color: #64748b; } /* Gray */

        .rating-badge {
            background: var(--warning-color);
            color: white;
            padding: 0.3rem 0.7rem;
            border-radius: 6px;
            font-size: 0.75rem;
            font-weight: 600;
        }

        .tool-rating {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            margin-top: 0.5rem;
            margin-bottom: 1rem;
        }

        .tool-rating .stars {
            color: var(--warning-color);
            font-size: 1.1rem;
        }

        .tool-rating .rating-number {
            font-weight: 600;
            color: var(--text-primary);
        }

        .tool-stats {
            display: flex;
            flex-wrap: wrap;
            gap: 0.75rem;
            margin-bottom: 1rem;
        }

        .tool-stats .stat {
            background: var(--bg-tertiary);
            color: var(--text-secondary);
            padding: 0.3rem 0.7rem;
            border-radius: 6px;
            font-size: 0.8rem;
            font-weight: 500;
        }

        .pricing-badge {
            display: inline-block;
            padding: 0.4rem 0.8rem;
            border-radius: 6px;
            font-size: 0.85rem;
            font-weight: 600;
            margin-bottom: 1.25rem;
        }

        .pricing-kostenlos { background-color: #10b981; color: white; } /* Green */
        .pricing-freemium { background-color: #f59e0b; color: white; } /* Orange */
        .pricing-kostenpflichtig { background-color: #3b82f6; color: white; } /* Blue */

        .tool-actions {
            display: flex;
            gap: 1rem;
            margin-top: auto; /* Push actions to the bottom */
        }

        .btn-details {
            flex: 1;
            background-color: var(--accent-primary);
            color: white;
            padding: 0.75rem 1rem;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
            text-align: center;
            transition: background-color 0.2s ease;
        }

        .btn-details:hover {
            background-color: var(--accent-secondary);
        }

        .btn-affiliate {
            flex: 1;
            background-color: var(--success-color);
            color: white;
            padding: 0.75rem 1rem;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
            text-align: center;
            transition: background-color 0.2s ease;
        }

        .btn-affiliate:hover {
            background-color: #059669;
        }

        .bookmark-btn {
            position: absolute;
            top: 1rem;
            right: 1rem;
            background: var(--bg-tertiary);
            border: 1px solid var(--border-primary);
            border-radius: 50%;
            width: 36px;
            height: 36px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            font-size: 1.1rem;
            transition: all 0.2s ease;
            z-index: 5;
        }

        .bookmark-btn:hover {
            background: var(--bg-secondary);
            border-color: var(--accent-primary);
        }

        .bookmark-btn.favorited {
            background: var(--error-color);
            color: white;
            border-color: var(--error-color);
        }

        /* Sidebar Widgets */
        .sidebar > div {
            background: var(--card-bg);
            border-radius: 12px;
            border: 1px solid var(--border-primary);
            padding: 1.5rem;
            box-shadow: 0 2px 4px var(--shadow-light);
        }

        .sidebar h3 {
            font-size: 1.3rem;
            margin-bottom: 1.25rem;
            color: var(--text-primary);
            border-bottom: 1px solid var(--border-secondary);
            padding-bottom: 0.75rem;
        }

        /* Quick Navigation */
        .quick-nav-items {
            display: flex;
            flex-wrap: wrap;
            gap: 0.75rem;
        }

        .quick-nav-items button {
            background: var(--bg-tertiary);
            color: var(--text-primary);
            padding: 0.5rem 1rem;
            border: 1px solid var(--border-primary);
            border-radius: 6px;
            cursor: pointer;
            font-size: 0.9rem;
            font-weight: 500;
            transition: all 0.2s ease;
        }

        .quick-nav-items button:hover {
            background: var(--accent-primary);
            color: white;
            border-color: var(--accent-primary);
        }

        /* Comparison Widget */
        .compare-checkbox-wrapper {
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .compare-checkbox {
            width: 1.2rem;
            height: 1.2rem;
            accent-color: var(--accent-primary);
            cursor: pointer;
            display: none; /* Hidden by default, shown by JS when compare mode is active */
        }

        .compare-label {
            font-size: 0.9rem;
            color: var(--text-secondary);
            cursor: pointer;
        }

        .compare-btn {
            background: var(--warning-color);
            color: white;
            padding: 0.75rem 1rem;
            border: none;
            border-radius: 8px;
            font-weight: 600;
            cursor: pointer;
            width: 100%;
            transition: all 0.3s ease;
            display: none;
            font-family: inherit;
        }

        .compare-btn:hover:not(:disabled) {
            background: #d97706;
            transform: translateY(-2px);
        }

        .compare-btn:disabled {
            opacity: 0.6;
            cursor: not-allowed;
            transform: none;
        }

        /* Usage Stats */
        .usage-stats .stat-item {
            display: flex;
            justify-content: space-between;
            margin-bottom: 0.75rem;
            padding-bottom: 0.75rem;
            border-bottom: 1px dashed var(--border-secondary);
            font-size: 0.95rem;
        }

        .usage-stats .stat-item:last-child {
            border-bottom: none;
            margin-bottom: 0;
            padding-bottom: 0;
        }

        .usage-stats .stat-label {
            color: var(--text-secondary);
        }

        .usage-stats .stat-value {
            font-weight: 600;
            color: var(--text-primary);
        }

        /* Recommendations */
        .recommended-tool {
            margin-bottom: 1.5rem;
            padding-bottom: 1.5rem;
            border-bottom: 1px dashed var(--border-secondary);
        }

        .recommended-tool:last-child {
            border-bottom: none;
            margin-bottom: 0;
            padding-bottom: 0;
        }

        .recommended-tool h4 {
            font-size: 1.1rem;
            margin-bottom: 0.5rem;
            color: var(--text-primary);
        }

        .recommended-tool p {
            font-size: 0.85rem;
            color: var(--text-secondary);
            margin-bottom: 0.75rem;
        }

        .quick-action-btn {
            display: inline-block;
            background: var(--accent-primary);
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 6px;
            text-decoration: none;
            font-size: 0.85rem;
            font-weight: 500;
            transition: background-color 0.2s ease;
        }

        .quick-action-btn:hover {
            background-color: var(--accent-secondary);
        }

        /* Ad Container */
        .ad-container {
            margin: 3rem auto;
            padding: 1.5rem;
            max-width: 1200px;
            text-align: center;
            background: var(--card-bg);
            border-radius: 12px;
            border: 1px solid var(--border-primary);
        }

        .ad-container::before {
            content: "Anzeige";
            display: block;
            font-size: 0.8rem;
            color: var(--text-secondary);
            margin-bottom: 1rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        /* Search Suggestions */
        .search-suggestions {
            position: absolute;
            top: 100%;
            left: 0;
            right: 0;
            background: var(--card-bg);
            border: 1px solid var(--border-primary);
            border-top: none;
            border-radius: 0 0 8px 8px;
            max-height: 200px;
            overflow-y: auto;
            z-index: 100;
            display: none;
        }

        .suggestion-item {
            padding: 0.5rem 1rem;
            cursor: pointer;
            border-bottom: 1px solid var(--border-primary);
            transition: background-color 0.2s ease;
        }

