  <div class="container">
    <!-- Filter Section -->
    <div class="filter-section">
      <div class="filter-controls">
        <div class="filter-group">
          <label for="searchBox" class="filter-label">Suche</label>
          <input 
            type="text" 
            id="searchBox" 
            class="search-box" 
            placeholder="Tool oder Beschreibung suchen..."
          />
        </div>
        
        <div class="filter-group">
          <label for="categoryFilter" class="filter-label">Kategorie</label>
          <select id="categoryFilter" class="dropdown">
            <option value="alle">Alle Kategorien</option>
            {categories.map(category => (
              <option value={category}>{category}</option>
            ))}
          </select>
        </div>
        
        <div class="filter-group">
          <label for="pricingFilter" class="filter-label">Preismodell</label>
          <select id="pricingFilter" class="dropdown">
            <option value="alle">Alle Preise</option>
            <option value="Kostenlos">Kostenlos</option>
            <option value="Freemium">Freemium</option>
            <option value="Kostenpflichtig">Premium</option>
          </select>
        </div>
        
        <div class="filter-group">
          <label for="ratingFilter" class="filter-label">Bewertung</label>
          <select id="ratingFilter" class="dropdown">
            <option value="alle">Alle Bewertungen</option>
            <option value="5">5 Sterne</option>
            <option value="4">4+ Sterne</option>
            <option value="3">3+ Sterne</option>
          </select>
