  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const categoryFilter = document.getElementById('categoryFilter');
      const pricingFilter = document.getElementById('pricingFilter');
      const ratingFilter = document.getElementById('ratingFilter');
      const searchBox = document.getElementById('searchBox');
      const toolCards = document.querySelectorAll('.tool-card');
      const resultCount = document.getElementById('resultCount');
      const clearFilters = document.getElementById('clearFilters');
      const quickFilterBtns = document.querySelectorAll('.quick-filter-btn');
      
      let activeFilters = {
        category: 'alle',
        pricing: 'alle',
        rating: 'alle',
        search: '',
        quick: 'alle'
      };

      // Quick Filter Buttons
      quickFilterBtns.forEach(btn => {
        btn.addEventListener('click', function() {
          quickFilterBtns.forEach(b => b.classList.remove('active'));
          this.classList.add('active');
          
          const filterValue = this.getAttribute('data-filter');
          activeFilters.quick = filterValue;
          
          if (filterValue === 'Kostenlos') {
            pricingFilter.value = 'Kostenlos';
            activeFilters.pricing = 'Kostenlos';
          } else if (filterValue === 'neu') {
            markNewTools();
          } else if (filterValue === 'beliebt') {
            sortByPopularity();
          } else {
            categoryFilter.value = 'alle';
            pricingFilter.value = 'alle';
            ratingFilter.value = 'alle';
            activeFilters = { ...activeFilters, category: 'alle', pricing: 'alle', rating: 'alle' };
          }
          
          filterTools();
        });
      });

      function markNewTools() {
        const randomCards = Array.from(toolCards).sort(() => 0.5 - Math.random()).slice(0, 5);
        toolCards.forEach(card => card.classList.remove('new'));
        randomCards.forEach(card => card.classList.add('new'));
      }

      function sortByPopularity() {
        const shuffledCards = Array.from(toolCards).sort(() => 0.5 - Math.random());
        const grid = document.getElementById('toolsGrid');
        shuffledCards.forEach(card => grid.appendChild(card));
      }

      function updateResultCount() {
        const visibleCards = Array.from(toolCards).filter(card => 
          !card.classList.contains('hidden')
        ).length;
        resultCount.textContent = visibleCards;
        
        // Show/hide clear button
        const hasActiveFilters = Object.values(activeFilters).some(value => value !== 'alle' && value !== '');
        clearFilters.style.display = hasActiveFilters ? 'block' : 'none';
      }

      function filterTools() {
        toolCards.forEach(card => {
          const cardCategory = card.getAttribute('data-category');
          const cardPricing = card.getAttribute('data-pricing');
          const cardTitle = card.getAttribute('data-title');
          const cardDescription = card.getAttribute('data-description');
          
          // Category match
          const categoryMatch = activeFilters.category === 'alle' || cardCategory === activeFilters.category;
          
          // Pricing match
          const pricingMatch = activeFilters.pricing === 'alle' || cardPricing === activeFilters.pricing;
          
          // Search match
          const searchMatch = activeFilters.search === '' || 
                             cardTitle.includes(activeFilters.search.toLowerCase()) || 
                             cardDescription.includes(activeFilters.search.toLowerCase());
          
          // Show/hide card
          if (categoryMatch && pricingMatch && searchMatch) {
            card.classList.remove('hidden');
          } else {
            card.classList.add('hidden');
          }
        });
        
        updateResultCount();
      }

      // Event listeners
      categoryFilter.addEventListener('change', function() {
        activeFilters.category = this.value;
        filterTools();
      });

      pricingFilter.addEventListener('change', function() {
        activeFilters.pricing = this.value;
        filterTools();
      });

      ratingFilter.addEventListener('change', function() {
        activeFilters.rating = this.value;
        filterTools();
      });

      searchBox.addEventListener('input', function() {
        activeFilters.search = this.value.toLowerCase();
        filterTools();
      });

      clearFilters.addEventListener('click', function() {
        // Reset all filters
        categoryFilter.value = 'alle';
        pricingFilter.value = 'alle';
        ratingFilter.value = 'alle';
        searchBox.value = '';
        
        activeFilters = {
          category: 'alle',
          pricing: 'alle', 
          rating: 'alle',
          search: '',
          quick: 'alle'
        };
        
        // Reset quick filter buttons
        quickFilterBtns.forEach(btn => btn.classList.remove('active'));
        quickFilterBtns[0].classList.add('active');
        
        filterTools();
      });

      // URL Parameters support
      function handleURLParams() {
        const urlParams = new URLSearchParams(window.location.search);
        const categoryParam = urlParams.get('category');
        const pricingParam = urlParams.get('pricing');
        
        if (categoryParam) {
          categoryFilter.value = categoryParam;
          activeFilters.category = categoryParam;
        }
        if (pricingParam) {
          pricingFilter.value = pricingParam;
          activeFilters.pricing = pricingParam;
        }
        
        filterTools();
      }

      handleURLParams();
      updateResultCount();

      // ===== TRACKING =====
      // Details Button Tracking
      document.querySelectorAll('.btn-details').forEach((btn, index) => {
        btn.addEventListener('click', function() {
          const toolName = this.getAttribute('data-tool');
          
          if (typeof gtag !== 'undefined') {
            gtag('event', 'tool_details_click', {
              'tool_name': toolName,
              'source': 'tools_page',
              'position': index + 1
            });
          }
        });
      });
      
      // Affiliate Button Tracking
      document.querySelectorAll('.btn-affiliate').forEach((btn, index) => {
        btn.addEventListener('click', function() {
          const toolName = this.getAttribute('data-tool');
          const position = this.getAttribute('data-position') || index + 1;
          
          if (typeof gtag !== 'undefined') {
            gtag('event', 'affiliate_click', {
              'tool_name': toolName,
              'source': 'tools_page',
              'position': position,
              'affiliate_url': this.href,
              'value': 15.00,
              'currency': 'EUR'
            });
          }
        });
      });
      
      // Filter Change Tracking
      categoryFilter.addEventListener('change', function() {
        if (typeof gtag !== 'undefined') {
          gtag('event', 'filter_change', {
            'filter_type': 'category',
            'filter_value': this.value
          });
        }
      });
      
      pricingFilter.addEventListener('change', function() {
        if (typeof gtag !== 'undefined') {
          gtag('event', 'filter_change', {
            'filter_type': 'pricing',
            'filter_value': this.value
          });
        }
      });
      
      // Search Tracking
      let searchTimeout;
      searchBox.addEventListener('input', function() {
        clearTimeout(searchTimeout);
        searchTimeout = setTimeout(() => {
          if (this.value.length > 2) {
            if (typeof gtag !== 'undefined') {
              gtag('event', 'search', {
                'search_term': this.value,
                'source': 'tools_page'
              });
            }
          }
        }, 1000);
      });
      
      // AdSense Initialization
      function initAdSense() {
        const ads = document.querySelectorAll('.adsbygoogle');
        
        const observer = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting && !entry.target.getAttribute('data-loaded')) {
              try {
                (adsbygoogle = window.adsbygoogle || []).push({});
                entry.target.setAttribute('data-loaded', 'true');
              } catch (e) {
                console.warn('AdSense loading error:', e);
              }
              observer.unobserve(entry.target);
            }
          });
        }, { threshold: 0.1 });
        
        ads.forEach(ad => observer.observe(ad));
      }
      
      initAdSense();
    });
  </script>
