      <div class="quick-filters">
        <button class="quick-filter-btn active" data-filter="alle">
          Alle Tools
        </button>
        <button class="quick-filter-btn" data-filter="Kostenlos">
          Kostenlos
        </button>
        <button class="quick-filter-btn" data-filter="neu">
          Neu hinzugefügt
        </button>
        <button class="quick-filter-btn" data-filter="beliebt">
          Am beliebtesten
        </button>
      </div>
      
      <!-- Results -->
      <div class="filter-results">
        <span class="result-count">
          <span id="resultCount">{tools.length}</span> Tools gefunden
        </span>
        <button id="clearFilters" class="clear-btn" style="display: none;">
          Filter zurücksetzen
        </button>
      </div>
    </div>

    <!-- AdSense #1 -->
    <div class="ad-container">
      <ins class="adsbygoogle"
           style="display:block"
           data-ad-client="ca-pub-5595876978844902"
           data-ad-slot="AUTO"
           data-ad-format="auto"
           data-full-width-responsive="true"></ins>
    </div>
    
    <!-- Tools Grid -->
    <div class="grid" id="toolsGrid">
      {tools.map((tool, index) => (
        <div class="card tool-card" 
             data-category={tool.data.category} 
             data-pricing={tool.data.pricing}
             data-rating={tool.data.rating || 4.0}
             data-title={tool.data.title.toLowerCase()}
             data-description={tool.data.description.toLowerCase()}>
          
          <div class="card-header">
            <div class={`category-badge category-${tool.data.category.toLowerCase().replace(/[^a-z]/g, '')}`}>
              {tool.data.category}
            </div>
            {tool.data.rating && (
              <div class="rating-badge">
                ★ {tool.data.rating}/5
              </div>
            )}
          </div>
          
          <h3>{tool.data.title}</h3>
          <p>{tool.data.description}</p>
          
          <div class="tool-stats">
            <span class="stat">Kategorie: {tool.data.category}</span>
            {Math.random() > 0.5 && (
              <span class="stat">Getestet</span>
            )}
          </div>
          
          <div class={`pricing-badge pricing-${tool.data.pricing?.toLowerCase() || 'freemium'}`}>
            {tool.data.pricing || 'Freemium'}
          </div>
          
          <div class="tool-actions">
            <a 
              href={`/tools/${tool.slug}`}
              class="btn-details"
              data-tool={tool.data.title}
            >
              Details ansehen
            </a>
            <a 
              href={tool.data.affiliate_link} 
              target="_blank"
              rel="noopener noreferrer"
              class="btn-affiliate"
              data-tool={tool.data.title}
              data-position={index + 1}
            >
              Tool testen
