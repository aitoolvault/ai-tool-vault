            position: relative;
            z-index: 2; /* Ensure it's above header but below nav */
        }

        .trust-container {
            max-width: 1400px;
            margin: 0 auto;
        }

        .trust-indicators {
            display: flex;
            justify-content: space-around;
            flex-wrap: wrap;
            gap: 1.5rem;
        }

        .trust-item {
