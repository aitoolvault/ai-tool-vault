  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // ===== THEME TOGGLE FUNCTIONALITY =====
      var themeToggle = document.getElementById('themeToggle');
      var html = document.documentElement;
      
      // Check for saved theme preference or default to 'light'
      var savedTheme = localStorage.getItem('theme') || 'light';
      html.setAttribute('data-theme', savedTheme);
      
      // Update toggle button appearance
      function updateToggleButton(theme) {
        var button = document.getElementById('themeToggle');
        if (button) {
          button.setAttribute('aria-label', 
            theme === 'dark' ? 'Zu hellem Modus wechseln' : 'Zu dunklem Modus wechseln'
          );
        }
      }
      
      updateToggleButton(savedTheme);
      
      // Theme toggle functionality
      if (themeToggle) {
        themeToggle.addEventListener('click', function() {
          var currentTheme = html.getAttribute('data-theme');
          var newTheme = currentTheme === 'dark' ? 'light' : 'dark';
          
          // Change theme
          html.setAttribute('data-theme', newTheme);
          localStorage.setItem('theme', newTheme);
          
          // Update button
          updateToggleButton(newTheme);
          
          // Track theme change
          if (typeof gtag !== 'undefined') {
            gtag('event', 'theme_change', {
              'theme_mode': newTheme,
              'source': 'tools_page_toggle'
            });
          }
        });
      }

      // ===== FILTER FUNCTIONALITY =====
      var categoryFilter = document.getElementById('categoryFilter');
      var pricingFilter = document.getElementById('pricingFilter');
      var ratingFilter = document.getElementById('ratingFilter');
      var searchBox = document.getElementById('searchBox');
      var toolCards = document.querySelectorAll('.tool-card');
      var resultCount = document.getElementById('resultCount');
      var clearFilters = document.getElementById('clearFilters');
      var quickFilterBtns = document.querySelectorAll('.quick-filter-btn');
      
      var activeFilters = {
        category: 'alle',
        pricing: 'alle',
        rating: 'alle',
        search: '',
        quick: 'alle'
      };

      // Quick Filter Buttons
      quickFilterBtns.forEach(function(btn) {
        btn.addEventListener('click', function() {
          quickFilterBtns.forEach(function(b) {
            b.classList.remove('active');
          });
          this.classList.add('active');
          
          var filterValue = this.getAttribute('data-filter');
          activeFilters.quick = filterValue;
          
          if (filterValue === 'Kostenlos') {
            pricingFilter.value = 'Kostenlos';
            activeFilters.pricing = 'Kostenlos';
          } else if (filterValue === 'neu') {
            markNewTools();
          } else if (filterValue === 'beliebt') {
            sortByPopularity();
          } else {
            categoryFilter.value = 'alle';
            pricingFilter.value = 'alle';
            ratingFilter.value = 'alle';
            activeFilters.category = 'alle';
            activeFilters.pricing = 'alle';
            activeFilters.rating = 'alle';
          }
          
          filterTools();
        });
      });

      function markNewTools() {
        var randomCards = Array.from(toolCards).sort(function() { return 0.5 - Math.random(); }).slice(0, 5);
        toolCards.forEach(function(card) {
          card.classList.remove('new');
        });
        randomCards.forEach(function(card) {
          card.classList.add('new');
        });
      }

      function sortByPopularity() {
        var shuffledCards = Array.from(toolCards).sort(function() { return 0.5 - Math.random(); });
        var grid = document.getElementById('toolsGrid');
        shuffledCards.forEach(function(card) {
          grid.appendChild(card);
        });
      }

      function updateResultCount() {
        var visibleCards = Array.from(toolCards).filter(function(card) {
          return !card.classList.contains('hidden');
        }).length;
        resultCount.textContent = visibleCards;
        
        // Show/hide clear button
        var hasActiveFilters = Object.keys(activeFilters).some(function(key) {
          return activeFilters[key] !== 'alle' && activeFilters[key] !== '';
        });
        clearFilters.style.display = hasActiveFilters ? 'block' : 'none';
      }

      function filterTools() {
        toolCards.forEach(function(card) {
          var cardCategory = card.getAttribute('data-category');
          var cardPricing = card.getAttribute('data-pricing');
          var cardTitle = card.getAttribute('data-title');
          var cardDescription = card.getAttribute('data-description');
          
          // Category match
          var categoryMatch = activeFilters.category === 'alle' || cardCategory === activeFilters.category;
          
          // Pricing match
          var pricingMatch = activeFilters.pricing === 'alle' || cardPricing === activeFilters.pricing;
          
          // Search match
          var searchMatch = activeFilters.search === '' || 
                           cardTitle.includes(activeFilters.search.toLowerCase()) || 
                           cardDescription.includes(activeFilters.search.toLowerCase());
          
          // Show/hide card
          if (categoryMatch && pricingMatch && searchMatch) {
            card.classList.remove('hidden');
          } else {
            card.classList.add('hidden');
          }
        });
        
        updateResultCount();
      }

      // Event listeners
      categoryFilter.addEventListener('change', function() {
        activeFilters.category = this.value;
        filterTools();
      });

      pricingFilter.addEventListener('change', function() {
        activeFilters.pricing = this.value;
        filterTools();
      });

      ratingFilter.addEventListener('change', function() {
        activeFilters.rating = this.value;
        filterTools();
      });

      searchBox.addEventListener('input', function() {
        activeFilters.search = this.value.toLowerCase();
        filterTools();
      });

      clearFilters.addEventListener('click', function() {
        // Reset all filters
        categoryFilter.value = 'alle';
        pricingFilter.value = 'alle';
        ratingFilter.value = 'alle';
        searchBox.value = '';
        
        activeFilters = {
          category: 'alle',
          pricing: 'alle', 
          rating: 'alle',
          search: '',
          quick: 'alle'
        };
        
        // Reset quick filter buttons
        quickFilterBtns.forEach(function(btn) {
          btn.classList.remove('active');
        });
        quickFilterBtns[0].classList.add('active');
        
        filterTools();
      });

      // URL Parameters support
      function handleURLParams() {
        var urlParams = new URLSearchParams(window.location.search);
        var categoryParam = urlParams.get('category');
        var pricingParam = urlParams.get('pricing');
        
        if (categoryParam) {
          categoryFilter.value = categoryParam;
          activeFilters.category = categoryParam;
        }
        if (pricingParam) {
          pricingFilter.value = pricingParam;
          activeFilters.pricing = pricingParam;
        }
        
        filterTools();
      }

      handleURLParams();
      updateResultCount();

      // ===== MOBILE MENU =====
      var mobileMenuBtn = document.querySelector('.mobile-menu');
      var navLinks = document.querySelector('.nav-links');
      
      if (mobileMenuBtn && navLinks) {
        var menuOpen = false;
        
        mobileMenuBtn.addEventListener('click', function(e) {
          e.stopPropagation();
          menuOpen = !menuOpen;
          
          if (menuOpen) {
            navLinks.classList.add('show');
            this.innerHTML = '‚úï';
          } else {
            navLinks.classList.remove('show');
            this.innerHTML = '‚ò∞';
          }
        });
        
        // Close menu when clicking outside
        document.addEventListener('click', function() {
          if (menuOpen) {
            navLinks.classList.remove('show');
            mobileMenuBtn.innerHTML = '‚ò∞';
            menuOpen = false;
          }
        });
      }

      // ===== TRACKING =====
      // Details Button Tracking
      document.querySelectorAll('.btn-details').forEach(function(btn, index) {
        btn.addEventListener('click', function() {
          var toolName = this.getAttribute('data-tool');
          
          if (typeof gtag !== 'undefined') {
            gtag('event', 'tool_details_click', {
              'tool_name': toolName,
              'source': 'tools_page',
              'position': index + 1
            });
          }
        });
      });
      
      // Affiliate Button Tracking
      document.querySelectorAll('.btn-affiliate').forEach(function(btn, index) {
        btn.addEventListener('click', function() {
          var toolName = this.getAttribute('data-tool');
          var position = this.getAttribute('data-position') || index + 1;
          
          if (typeof gtag !== 'undefined') {
            gtag('event', 'affiliate_click', {
              'tool_name': toolName,
              'source': 'tools_page',
              'position': position,
              'affiliate_url': this.href,
              'value': 15.00,
              'currency': 'EUR'
            });
          }
        });
      });
      
      // Filter Change Tracking
      categoryFilter.addEventListener('change', function() {
        if (typeof gtag !== 'undefined') {
          gtag('event', 'filter_change', {
            'filter_type': 'category',
            'filter_value': this.value
          });
        }
      });
      
      pricingFilter.addEventListener('change', function() {
        if (typeof gtag !== 'undefined') {
          gtag('event', 'filter_change', {
            'filter_type': 'pricing',
            'filter_value': this.value
          });
        }
      });
      
      // Search Tracking
      var searchTimeout;
      searchBox.addEventListener('input', function() {
        clearTimeout(searchTimeout);
        var searchValue = this.value;
        searchTimeout = setTimeout(function() {
          if (searchValue.length > 2) {
            if (typeof gtag !== 'undefined') {
              gtag('event', 'search', {
                'search_term': searchValue,
                'source': 'tools_page'
              });
            }
          }
        }, 1000);
      });
      
      // AdSense Initialization
      function initAdSense() {
        var ads = document.querySelectorAll('.adsbygoogle');
        
        var observer = new IntersectionObserver(function(entries) {
          entries.forEach(function(entry) {
            if (entry.isIntersecting && !entry.target.getAttribute('data-loaded')) {
              try {
                (adsbygoogle = window.adsbygoogle || []).push({});
                entry.target.setAttribute('data-loaded', 'true');
              } catch (e) {
                console.warn('AdSense loading error:', e);
              }
              observer.unobserve(entry.target);
            }
          });
        }, { threshold: 0.1 });
        
        ads.forEach(function(ad) {
          observer.observe(ad);
        });
      }
      
      initAdSense();
      
      console.log('üé® Tools page with Dark Mode initialized');
    });
  </script>
