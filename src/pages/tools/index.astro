      background: #f8fafc;
      color: #374151;
      padding: 0.75rem 1rem;
      border-radius: 8px;
      text-decoration: none;
      font-weight: 600;
      text-align: center;
      font-size: 0.9rem;
      transition: all 0.2s;
      border: 2px solid #e2e8f0;
    }
    
    .btn-affiliate {
      background: #3b82f6;
      color: white;
      padding: 0.75rem 1rem;
      border-radius: 8px;
      text-decoration: none;
      font-weight: 600;
      text-align: center;
      font-size: 0.9rem;
      transition: all 0.2s;
      border: 2px solid #3b82f6;
    }
    
    .btn-details:hover {
      background: #e2e8f0;
      border-color: #cbd5e1;
      color: #1e293b;
    }
    
    .btn-affiliate:hover {
      background: #2563eb;
      border-color: #2563eb;
      transform: translateY(-1px);
    }
    
    /* Special Badges */
    .card.featured::before {
      content: "Empfohlen";
      position: absolute;
      top: -8px;
      right: 15px;
      background: linear-gradient(135deg, #fbbf24, #f59e0b);
      color: white;
      padding: 0.25rem 0.75rem;
      border-radius: 12px;
      font-size: 0.7rem;
      font-weight: 600;
      z-index: 10;
    }
    
    .card.new::after {
      content: "Neu";
      position: absolute;
      top: -8px;
      left: 15px;
      background: linear-gradient(135deg, #10b981, #059669);
      color: white;
      padding: 0.25rem 0.75rem;
      border-radius: 12px;
      font-size: 0.7rem;
      font-weight: 600;
      z-index: 10;
    }
    
    /* AdSense */
    .ad-container {
      margin: 3rem auto;
      padding: 1.5rem;
      max-width: 1400px;
      text-align: center;
      background: white;
      border-radius: 12px;
      border: 1px solid #e2e8f0;
    }

    .ad-container::before {
      content: "Anzeige";
      display: block;
      font-size: 0.8rem;
      color: #64748b;
      margin-bottom: 1rem;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .ad-in-grid {
      grid-column: 1 / -1;
      margin: 2rem 0;
    }
    
    /* Footer */
    .footer {
      background: #0f172a;
      color: white;
      padding: 3rem 0 2rem;
      margin-top: 4rem;
    }
    
    .footer-container {
      max-width: 1400px;
      margin: 0 auto;
      padding: 0 2rem;
      text-align: center;
    }
    
    .footer p {
      color: #94a3b8;
      margin-bottom: 0.5rem;
    }
    
    /* Utility Classes */
    .hidden {
      display: none !important;
    }
    
    /* Mobile Responsive */
    @media (max-width: 768px) {
      .nav-container {
        padding: 0 1rem;
      }
      
      .container {
        padding: 0 1rem;
      }
      
      .header {
        padding: 2rem 0;
      }
      
      .header h1 {
        font-size: 2rem;
      }
      
      .header-stats {
        gap: 1.5rem;
      }
      
      .filter-controls {
        grid-template-columns: 1fr;
        gap: 1rem;
      }
      
      .search-box {
        min-width: 100%;
      }
      
      .trust-indicators {
        gap: 1.5rem;
      }
      
      .trust-item {
        font-size: 0.8rem;
      }
      
      .grid {
        grid-template-columns: 1fr;
        gap: 1.5rem;
        margin: 1.5rem auto;
      }
      
      .tool-actions {
        grid-template-columns: 1fr;
      }
      
      .quick-filters {
        overflow-x: auto;
        padding-bottom: 0.5rem;
        scrollbar-width: none;
        -ms-overflow-style: none;
      }
      
      .quick-filters::-webkit-scrollbar {
        display: none;
      }
    }
  </style>
</head>

<body>
  <!-- Navigation -->
  <nav class="navigation">
    <div class="nav-container">
      <a href="/" class="nav-logo">AI Tool Vault</a>
      <div class="nav-links">
        <a href="/">Home</a>
        <a href="/tools">Tools</a>
        <a href="/kontakt">Kontakt</a>
      </div>
