  <script define:vars={{ tools, categories, toolNames, freeTools, freemiumTools, paidTools }}>
    document.addEventListener('DOMContentLoaded', function() {
      // Theme Toggle
      var themeToggle = document.getElementById('themeToggle');
      var html = document.documentElement;
      
      var savedTheme = localStorage.getItem('theme') || 'light';
      html.setAttribute('data-theme', savedTheme);
      
      if (themeToggle) {
        themeToggle.addEventListener('click', function() {
          var currentTheme = html.getAttribute('data-theme');
          var newTheme = currentTheme === 'dark' ? 'light' : 'dark';
          
          html.setAttribute('data-theme', newTheme);
          localStorage.setItem('theme', newTheme);
          
          if (typeof gtag !== 'undefined') {
            gtag('event', 'theme_change', {
              'theme_mode': newTheme,
              'source': 'tools_page'
            });
          }
        });
      }

      // Mobile Menu
      var mobileMenuBtn = document.querySelector('.mobile-menu');
      var navLinks = document.querySelector('.nav-links');
      
      if (mobileMenuBtn && navLinks) {
        var menuOpen = false;
        
        mobileMenuBtn.addEventListener('click', function(e) {
          e.stopPropagation();
          menuOpen = !menuOpen;
          
          if (menuOpen) {
            navLinks.classList.add('show');
            this.innerHTML = '‚úï';
          } else {
            navLinks.classList.remove('show');
            this.innerHTML = '‚ò∞';
          }
        });
        
        document.addEventListener('click', function() {
          if (menuOpen) {
            navLinks.classList.remove('show');
            mobileMenuBtn.innerHTML = '‚ò∞';
            menuOpen = false;
          }
        });
      }

      // Filter Functionality
      var searchInput = document.getElementById('searchInput');
      var categoryFilter = document.getElementById('categoryFilter');
      var pricingFilter = document.getElementById('pricingFilter');
      var featureFilter = document.getElementById('featureFilter');
      var sortFilter = document.getElementById('sortFilter');
      var clearFilters = document.getElementById('clearFilters');
      var toolsGrid = document.getElementById('toolsGrid');
      var resultCount = document.getElementById('resultCount');
      var quickFilterBtns = document.querySelectorAll('.quick-filter-btn');

      // Get all tool cards
      var allCards = Array.from(toolsGrid.children);
      var activeFilters = {};

      function applyFilters() {
        var visibleCards = allCards.filter(function(card) {
          // Search filter
          if (activeFilters.search) {
            var title = card.dataset.name.toLowerCase();
            var category = card.dataset.category.toLowerCase();
            var searchTerm = activeFilters.search.toLowerCase();
            if (!title.includes(searchTerm) && !category.includes(searchTerm)) {
              return false;
            }
          }

          // Category filter
          if (activeFilters.category && card.dataset.category !== activeFilters.category) {
            return false;
          }

          // Pricing filter
          if (activeFilters.pricing && card.dataset.pricing !== activeFilters.pricing) {
            return false;
          }

          // Feature filter
          if (activeFilters.feature) {
            switch (activeFilters.feature) {
              case 'api':
                if (card.dataset.api !== 'true') return false;
                break;
              case 'mobile':
                if (card.dataset.mobile !== 'true') return false;
                break;
              case 'trial':
                if (card.dataset.trial !== 'true') return false;
                break;
            }
          }

          // Quick filters
          if (activeFilters.quick) {
            switch (activeFilters.quick) {
              case 'featured':
                if (card.dataset.featured !== 'true') return false;
                break;
              case 'free':
                if (card.dataset.pricing !== 'Kostenlos') return false;
                break;
              case 'new':
                var statElements = card.querySelectorAll('.stat');
                var isNew = false;
                statElements.forEach(function(stat) {
                  if (stat.textContent.includes('2023') || stat.textContent.includes('2024') || stat.textContent.includes('2025')) {
                    isNew = true;
                  }
                });
                if (!isNew) return false;
                break;
              case 'popular':
                var rating = parseFloat(card.dataset.rating);
                if (rating < 4.5) return false;
                break;
              case 'api':
                if (card.dataset.api !== 'true') return false;
                break;
            }
          }

          return true;
        });

        // Hide all cards
        allCards.forEach(function(card) {
          card.style.display = 'none';
        });

        // Sort visible cards
        if (activeFilters.sort) {
          visibleCards.sort(function(a, b) {
            switch (activeFilters.sort) {
              case 'name':
                return a.dataset.name.localeCompare(b.dataset.name);
              case 'rating':
                return parseFloat(b.dataset.rating) - parseFloat(a.dataset.rating);
              case 'category':
                return a.dataset.category.localeCompare(b.dataset.category);
              case 'pricing':
                var priceOrder = {'Kostenlos': 1, 'Freemium': 2, 'Kostenpflichtig': 3};
                return priceOrder[a.dataset.pricing] - priceOrder[b.dataset.pricing];
              default:
                return 0;
            }
          });
        }

        // Show visible cards
        visibleCards.forEach(function(card) {
          card.style.display = 'flex';
        });

        // Update result count
        resultCount.textContent = visibleCards.length + ' Tools gefunden';
      }

      // Event Listeners
      if (searchInput) {
        searchInput.addEventListener('input', function() {
          activeFilters.search = this.value;
          applyFilters();
        });
      }

      if (categoryFilter) {
        categoryFilter.addEventListener('change', function() {
          activeFilters.category = this.value;
          applyFilters();
        });
      }

      if (pricingFilter) {
        pricingFilter.addEventListener('change', function() {
          activeFilters.pricing = this.value;
          applyFilters();
        });
      }

      if (featureFilter) {
        featureFilter.addEventListener('change', function() {
          activeFilters.feature = this.value;
          applyFilters();
        });
      }

      if (sortFilter) {
        sortFilter.addEventListener('change', function() {
          activeFilters.sort = this.value;
          applyFilters();
        });
      }

      // Quick Filters
      quickFilterBtns.forEach(function(btn) {
        btn.addEventListener('click', function() {
          var filter = this.dataset.filter;
          
          // Toggle active state
          quickFilterBtns.forEach(function(b) { b.classList.remove('active'); });
          
          if (activeFilters.quick === filter) {
            activeFilters.quick = '';
          } else {
            activeFilters.quick = filter;
            this.classList.add('active');
          }
          
          applyFilters();
        });
      });

      // Clear Filters
      if (clearFilters) {
        clearFilters.addEventListener('click', function() {
          activeFilters = {};
          searchInput.value = '';
          categoryFilter.value = '';
          pricingFilter.value = '';
          featureFilter.value = '';
          sortFilter.value = 'name';
          quickFilterBtns.forEach(function(btn) { btn.classList.remove('active'); });
          applyFilters();
        });
      }

      // Bookmark functionality
      var bookmarkBtns = document.querySelectorAll('.bookmark-btn');
      var bookmarkedTools = JSON.parse(localStorage.getItem('bookmarkedTools') || '[]');

      // Initialize bookmark states
      bookmarkBtns.forEach(function(btn) {
        var toolName = btn.dataset.tool;
        if (bookmarkedTools.includes(toolName)) {
          btn.textContent = '‚ù§Ô∏è';
          btn.classList.add('favorited');
        }
      });

      bookmarkBtns.forEach(function(btn) {
        btn.addEventListener('click', function(e) {
          e.preventDefault();
          var toolName = this.dataset.tool;
          var index = bookmarkedTools.indexOf(toolName);
          
          if (index > -1) {
            bookmarkedTools.splice(index, 1);
            this.textContent = 'ü§ç';
            this.classList.remove('favorited');
          } else {
            bookmarkedTools.push(toolName);
            this.textContent = '‚ù§Ô∏è';
            this.classList.add('favorited');
          }
          
          localStorage.setItem('bookmarkedTools', JSON.stringify(bookmarkedTools));
          
          if (typeof gtag !== 'undefined') {
            gtag('event', 'bookmark_toggle', {
              'tool_name': toolName,
              'action': index > -1 ? 'remove' : 'add',
              'source': 'tools_page'
            });
          }
        });
      });

      // Comparison functionality
      var compareCheckboxes = document.querySelectorAll('.compare-checkbox:not(#compare-toggle)');
      var compareToggle = document.getElementById('compare-toggle');
      var compareBtn = document.getElementById('compareSelected');
      var selectedForComparison = [];

      function updateCompareButton() {
        compareBtn.textContent = 'Vergleichen (' + selectedForComparison.length + ')';
        compareBtn.style.display = selectedForComparison.length > 0 ? 'block' : 'none';
      }

      if (compareToggle) {
        compareToggle.addEventListener('change', function() {
          var isCompareMode = this.checked;
          compareCheckboxes.forEach(function(checkbox) {
            checkbox.style.display = isCompareMode ? 'block' : 'none';
          });
          
          if (!isCompareMode) {
            selectedForComparison = [];
            compareCheckboxes.forEach(function(checkbox) {
              checkbox.checked = false;
            });
            updateCompareButton();
          }
        });
      }

      compareCheckboxes.forEach(function(checkbox) {
        checkbox.addEventListener('change', function() {
          var toolName = this.dataset.tool;
          
          if (this.checked) {
            if (selectedForComparison.length < 4) {
              selectedForComparison.push(toolName);
            } else {
              this.checked = false;
              alert('Du kannst maximal 4 Tools vergleichen.');
            }
          } else {
            var index = selectedForComparison.indexOf(toolName);
            if (index > -1) {
              selectedForComparison.splice(index, 1);
            }
          }
          
          updateCompareButton();
        });
      });

      if (compareBtn) {
        compareBtn.addEventListener('click', function() {
          if (selectedForComparison.length < 2) {
            alert('W√§hle mindestens 2 Tools zum Vergleichen aus.');
            return;
          }
          
          var compareUrl = '/compare?tools=' + selectedForComparison.join(',');
          window.location.href = compareUrl;
        });
      }

      // Global filter function for quick nav
      window.filterByCategory = function(category) {
        categoryFilter.value = category;
        activeFilters.category = category;
        applyFilters();
        
        // Scroll to results
        toolsGrid.scrollIntoView({ behavior: 'smooth' });
      };

      // URL parameter handling
      var urlParams = new URLSearchParams(window.location.search);
      var categoryParam = urlParams.get('category');
      var searchParam = urlParams.get('search');
      var pricingParam = urlParams.get('pricing');
      
      if (categoryParam) {
        categoryFilter.value = categoryParam;
        activeFilters.category = categoryParam;
      }
      
      if (searchParam) {
        searchInput.value = searchParam;
        activeFilters.search = searchParam;
      }
      
      if (pricingParam) {
        pricingFilter.value = pricingParam;
        activeFilters.pricing = pricingParam;
      }

      // Apply initial filters if any URL parameters
      if (categoryParam || searchParam || pricingParam) {
        applyFilters();
      }

      // AdSense initialization
      function initAdSense() {
        var ads = document.querySelectorAll('.adsbygoogle');
        var observer = new IntersectionObserver(function(entries) {
          entries.forEach(function(entry) {
            if (entry.isIntersecting && !entry.target.getAttribute('data-loaded')) {
              try {
                (adsbygoogle = window.adsbygoogle || []).push({});
                entry.target.setAttribute('data-loaded', 'true');
              } catch (e) {
                console.warn('AdSense loading error:', e);
              }
              observer.unobserve(entry.target);
            }
          });
        }, { threshold: 0.1 });
        
        ads.forEach(function(ad) {
          observer.observe(ad);
        });
      }

      // Initialize AdSense
      initAdSense();

      // Search suggestions
      if (searchInput) {
        var suggestionsList = document.createElement('div');
        suggestionsList.className = 'search-suggestions';
        
        searchInput.parentNode.style.position = 'relative';
        searchInput.parentNode.appendChild(suggestionsList);
        
        searchInput.addEventListener('input', function() {
          var query = this.value.toLowerCase();
          if (query.length < 2) {
            suggestionsList.style.display = 'none';
            return;
          }
          
          var matches = toolNames.filter(function(tool) {
            return tool.toLowerCase().includes(query);
          }).slice(0, 5);
          
          if (matches.length > 0) {
            suggestionsList.innerHTML = matches.map(function(match) {
              return '<div class="suggestion-item">' + match + '</div>';
            }).join('');
            suggestionsList.style.display = 'block';
            
            // Add click handlers to suggestions
            suggestionsList.querySelectorAll('.suggestion-item').forEach(function(item) {
              item.addEventListener('click', function() {
                searchInput.value = this.textContent;
                activeFilters.search = this.textContent;
                applyFilters();
                suggestionsList.style.display = 'none';
              });
            });
          } else {
            suggestionsList.style.display = 'none';
          }
        });
        
        // Hide suggestions when clicking outside
        document.addEventListener('click', function(e) {
          if (!searchInput.contains(e.target) && !suggestionsList.contains(e.target)) {
            suggestionsList.style.display = 'none';
          }
        });
      }

      // Affiliate link tracking
      var affiliateLinks = document.querySelectorAll('.btn-affiliate');
      affiliateLinks.forEach(function(link, index) {
        link.addEventListener('click', function() {
          var toolName = this.dataset.tool;
          var position = this.dataset.position || index + 1;
          
          if (typeof gtag !== 'undefined') {
            gtag('event', 'affiliate_click', {
              'tool_name': toolName,
              'position': position,
              'affiliate_url': this.href,
              'source': 'tools_page',
              'value': 10.00,
              'currency': 'EUR'
            });
          }
        });
      });

      // Details link tracking
      var detailsLinks = document.querySelectorAll('.btn-details');
      detailsLinks.forEach(function(link, index) {
        link.addEventListener('click', function() {
          var toolName = this.closest('.card').dataset.name;
          
          if (typeof gtag !== 'undefined') {
            gtag('event', 'tool_details_click', {
              'tool_name': toolName,
              'position': index + 1,
              'source': 'tools_page'
            });
          }
        });
      });

      console.log('üé® Tools page loaded successfully!');
      console.log('üìä Tools available:', tools.length);
      console.log('üìÇ Categories:', categories.length);
    });
  </script>
