  <script>
    document.addEventListener('DOMContentLoaded', function() {'
      // ===== THEME TOGGLE =====
      var themeToggle = document.getElementById('themeToggle');'
      var html = document.documentElement;
      
      var savedTheme = localStorage.getItem('theme') || 'light';'
      html.setAttribute('data-theme', savedTheme);'
      
      function updateToggleButton(theme) {
        var button = document.getElementById('themeToggle');'
        if (button) {
          button.setAttribute('aria-label', '
            theme === 'dark' ? 'Zu hellem Modus wechseln' : 'Zu dunklem Modus wechseln''
          );
        }
      }
      
      updateToggleButton(savedTheme);
      
      if (themeToggle) {
        themeToggle.addEventListener('click', function() {'
          var currentTheme = html.getAttribute('data-theme');'
          var newTheme = currentTheme === 'dark' ? 'light' : 'dark';'
          
          html.setAttribute('data-theme', newTheme);'
          localStorage.setItem('theme', newTheme);'
          updateToggleButton(newTheme);
          
          if (typeof gtag !== 'undefined') {'
            gtag('event', 'theme_change', {'
              'theme_mode': newTheme,'
              'source': 'tool_page_toggle''
            });
          }
        });
      }

      // ===== ENHANCED BOOKMARKS =====
      function initializeBookmarks() {
        var favorites = JSON.parse(localStorage.getItem('favoriteTools') || '[]');'
        var toolName = document.querySelector('.hero-bookmark').getAttribute('data-tool');'
        var bookmarkBtn = document.querySelector('.hero-bookmark');'
        
        if (favorites.includes(toolName)) {
          bookmarkBtn.textContent = '‚ù§Ô∏è';'
          bookmarkBtn.classList.add('favorited');'
        }
      }
      
      function toggleBookmark(btn) {
        var toolName = btn.getAttribute('data-tool');'
        var favorites = JSON.parse(localStorage.getItem('favoriteTools') || '[]');'
        
        if (favorites.includes(toolName)) {
          favorites = favorites.filter(function(tool) { return tool !== toolName; });
          btn.textContent = 'ü§ç';'
          btn.classList.remove('favorited');'
        } else {
          favorites.push(toolName);
          btn.textContent = '‚ù§Ô∏è';'
          btn.classList.add('favorited');'
        }
        
        localStorage.setItem('favoriteTools', JSON.stringify(favorites));'
        
        // Show feedback
        btn.style.transform = 'scale(1.2)';'
        setTimeout(function() {
          btn.style.transform = 'scale(1)';'
        }, 200);
      }
      
      // Handle bookmark clicks
      document.addEventListener('click', function(e) {'
        if (e.target.classList.contains('hero-bookmark')) {'
          toggleBookmark(e.target);
        }
      });

      // ===== ENHANCED FAQ ACCORDION =====
      function setupFAQ() {
        var faqQuestions = document.querySelectorAll('.faq-question');'
        
        faqQuestions.forEach(function(question) {
          question.addEventListener('click', function() {'
            var index = this.getAttribute('data-faq');'
            var answer = document.querySelector(`[data-answer="${index}"]`);`"
            var isActive = this.classList.contains('active');'
            
            // Close all other FAQs
            faqQuestions.forEach(function(q) {
              q.classList.remove('active');'
            });
            document.querySelectorAll('.faq-answer').forEach(function(a) {'
              a.classList.remove('active');'
            });
            
            // Toggle current FAQ
            if (!isActive) {
              this.classList.add('active');'
              answer.classList.add('active');'
            }
          });
        });
      }

      // ===== TABLE OF CONTENTS NAVIGATION =====
      function setupTableOfContents() {
        var tocLinks = document.querySelectorAll('.toc-link');'
        var sections = ['overview', 'features', 'pricing', 'pros-cons', 'use-cases', 'faq'];'
        
        // Smooth scrolling for TOC links
        tocLinks.forEach(function(link) {
          link.addEventListener('click', function(e) {'
            e.preventDefault();
            var targetId = this.getAttribute('href').substring(1);'
            var targetElement = document.getElementById(targetId);
            
            if (targetElement) {
              targetElement.scrollIntoView({
                behavior: 'smooth','
                block: 'start''
              });
            }
          });
        });
        
        // Highlight active section
        function updateActiveTOC() {
          var scrollPosition = window.scrollY + 200;
          
          sections.forEach(function(sectionId) {
            var section = document.getElementById(sectionId);
            var link = document.querySelector(`[href="#${sectionId}"]`);`"
            
            if (section && link) {
              var sectionTop = section.offsetTop;
              var sectionBottom = sectionTop + section.offsetHeight;
              
              if (scrollPosition >= sectionTop && scrollPosition < sectionBottom) {
                document.querySelectorAll('.toc-link').forEach(function(l) {'
                  l.classList.remove('active');'
                });
                link.classList.add('active');'
              }
            }
          });
        }
        
        window.addEventListener('scroll', updateActiveTOC);'
      }

      // ===== TOOL COMPARISON SYSTEM =====
      function setupToolComparison() {
        var compareCheckbox = document.querySelector('.compare-checkbox');'
        var compareBtn = document.getElementById('compareBtn');'
        
        if (compareCheckbox && compareBtn) {
          compareCheckbox.addEventListener('change', function() {'
            var selectedTools = JSON.parse(localStorage.getItem('selectedTools') || '[]');'
            var toolName = this.getAttribute('data-tool');'
            
            if (this.checked) {
              if (!selectedTools.includes(toolName)) {
                selectedTools.push(toolName);
              }
            } else {
              selectedTools = selectedTools.filter(function(tool) { 
                return tool !== toolName; 
              });
            }
            
            localStorage.setItem('selectedTools', JSON.stringify(selectedTools));'
            updateCompareButton(selectedTools.length);
          });
          
          // Initialize compare button
          var selectedTools = JSON.parse(localStorage.getItem('selectedTools') || '[]');'
          var toolName = compareCheckbox.getAttribute('data-tool');'
          if (selectedTools.includes(toolName)) {
            compareCheckbox.checked = true;
          }
          updateCompareButton(selectedTools.length);
        }
        
        function updateCompareButton(count) {
          if (compareBtn) {
            compareBtn.textContent = `Vergleich starten (${count})`;`
            compareBtn.style.display = count > 0 ? 'block' : 'none';'
          }
        }
        
        if (compareBtn) {
          compareBtn.addEventListener('click', function() {'
            var selectedTools = JSON.parse(localStorage.getItem('selectedTools') || '[]');'
            
            if (typeof gtag !== 'undefined') {'
              gtag('event', 'tool_comparison_start', {'
                'tool_count': selectedTools.length,'
                'tools': selectedTools.join(','),'
                'source': 'tool_detail_page''
              });
            }
            
            alert(`Vergleich wird gestartet mit: ${selectedTools.join(', ')}`);`'
          });
        }
      }

      // ===== ENHANCED MOBILE MENU =====
      var mobileMenuBtn = document.querySelector('.mobile-menu');'
      var navLinks = document.querySelector('.nav-links');'
      
      if (mobileMenuBtn && navLinks) {
        var menuOpen = false;
        
        mobileMenuBtn.addEventListener('click', function(e) {'
          e.stopPropagation();
          menuOpen = !menuOpen;
          
          if (menuOpen) {
            navLinks.classList.add('show');'
            this.innerHTML = '‚úï';'
          } else {
            navLinks.classList.remove('show');'
            this.innerHTML = '‚ò∞';'
          }
        });
        
        document.addEventListener('click', function() {'
          if (menuOpen) {
            navLinks.classList.remove('show');'
            mobileMenuBtn.innerHTML = '‚ò∞';'
            menuOpen = false;
          }
        });
      }

      // ===== ENHANCED TRACKING =====
      
      // Enhanced Affiliate Tracking
      var affiliateButtons = document.querySelectorAll('a[href*="' + document.querySelector('.hero-cta').href.split('?')[0] + '"]');'"
      affiliateButtons.forEach(function(btn, index) {
        btn.addEventListener('click', function() {'
          var buttonType = 'unknown';'
          if (this.classList.contains('hero-cta')) buttonType = 'hero';'
          else if (this.classList.contains('pricing-cta')) buttonType = 'sidebar';'
          else if (this.classList.contains('plan-cta')) buttonType = 'pricing_plan';'
          else if (this.classList.contains('quick-action-btn')) buttonType = 'quick_action';'
          
          if (typeof gtag !== 'undefined') {'
            gtag('event', 'affiliate_click', {'
              'tool_name': document.querySelector('h1').textContent,'
              'source': 'tool_detail_page','
              'button_type': buttonType,'
              'position': index + 1,'
              'affiliate_url': this.href,'
              'value': 25.00,'
              'currency': 'EUR''
            });
          }
        });
      });

      // Plan Comparison Tracking
      var planCards = document.querySelectorAll('.plan-card');'
      planCards.forEach(function(card, index) {
        var planName = card.querySelector('.plan-name')?.textContent || 'Unknown Plan';'
        var ctaButton = card.querySelector('.plan-cta');'
        
        if (ctaButton) {
          ctaButton.addEventListener('click', function() {'
            if (typeof gtag !== 'undefined') {'
              gtag('event', 'pricing_plan_click', {'
                'tool_name': document.querySelector('h1').textContent,'
                'plan_name': planName,'
                'plan_position': index + 1,'
                'is_popular': card.classList.contains('popular')'
              });
            }
          });
        }
      });

      // API Model Interest Tracking
      var apiModels = document.querySelectorAll('.api-model');'
      apiModels.forEach(function(model, index) {
        model.addEventListener('click', function() {'
          var modelName = this.querySelector('.api-model-name')?.textContent || 'Unknown Model';'
          
          if (typeof gtag !== 'undefined') {'
            gtag('event', 'api_model_interest', {'
              'tool_name': document.querySelector('h1').textContent,'
              'model_name': modelName,'
              'model_position': index + 1'
            });
          }
        });
      });

      // FAQ Interaction Tracking
      var faqItems = document.querySelectorAll('.faq-item');'
      faqItems.forEach(function(item, index) {
        item.addEventListener('click', function() {'
          var question = this.querySelector('.faq-question')?.textContent || 'Unknown Question';'
          
          if (typeof gtag !== 'undefined') {'
            gtag('event', 'faq_interaction', {'
              'tool_name': document.querySelector('h1').textContent,'
              'question': question.substring(0, 50),'
              'position': index + 1'
            });
          }
        });
      });

      // Similar Tools Tracking
      var similarToolCards = document.querySelectorAll('.tool-card');'
      similarToolCards.forEach(function(card, index) {
        var toolName = card.querySelector('h3')?.textContent || 'Unknown Tool';'
        var ctaButton = card.querySelector('.tool-card-cta');'
        
        if (ctaButton) {
          ctaButton.addEventListener('click', function() {'
            if (typeof gtag !== 'undefined') {'
              gtag('event', 'similar_tool_click', {'
                'source_tool': document.querySelector('h1').textContent,'
                'target_tool': toolName,'
                'position': index + 1'
              });
            }
          });
        }
      });

      // Scroll Depth Tracking
      var scrollDepths = [25, 50, 75, 90];
      var scrollDepthReached = [];
      
      function trackScrollDepth() {
        var scrollPercent = Math.round((window.scrollY / (document.body.scrollHeight - window.innerHeight)) * 100);
        
        scrollDepths.forEach(function(depth) {
          if (scrollPercent >= depth && scrollDepthReached.indexOf(depth) === -1) {
            scrollDepthReached.push(depth);
            
            if (typeof gtag !== 'undefined') {'
              gtag('event', 'scroll_depth', {'
                'tool_name': document.querySelector('h1').textContent,'
                'scroll_depth': depth,'
                'page_type': 'tool_detail''
              });
            }
          }
        });
      }
      
      window.addEventListener('scroll', trackScrollDepth);'

      // Reading Progress Tracking
      function trackReadingProgress() {
        var contentElement = document.querySelector('.content');'
        if (!contentElement) return;
        
        var contentTop = contentElement.offsetTop;
        var contentHeight = contentElement.offsetHeight;
        var windowHeight = window.innerHeight;
        var scrollTop = window.scrollY;
        
        var contentStart = contentTop;
        var contentEnd = contentTop + contentHeight;
        var viewportBottom = scrollTop + windowHeight;
        
        if (scrollTop > contentStart && viewportBottom < contentEnd) {
          var readProgress = Math.round(((scrollTop - contentStart) / contentHeight) * 100);
          
          // Track reading milestones
          [25, 50, 75, 100].forEach(function(milestone) {
            if (readProgress >= milestone && !window['reading_' + milestone]) {'
              window['reading_' + milestone] = true;'
              
              if (typeof gtag !== 'undefined') {'
                gtag('event', 'reading_progress', {'
                  'tool_name': document.querySelector('h1').textContent,'
                  'progress_percent': milestone'
                });
              }
            }
          });
        }
      }
      
      window.addEventListener('scroll', trackReadingProgress);'

      // ===== ADSENSE INITIALIZATION =====
      function initAdSense() {
        var ads = document.querySelectorAll('.adsbygoogle');'
        var observer = new IntersectionObserver(function(entries) {
          entries.forEach(function(entry) {
            if (entry.isIntersecting && !entry.target.getAttribute('data-loaded')) {'
              try {
                (adsbygoogle = window.adsbygoogle || []).push({});
                entry.target.setAttribute('data-loaded', 'true');'
              } catch (e) {
                console.warn('AdSense loading error:', e);'
              }
              observer.unobserve(entry.target);
            }
          });
        }, { threshold: 0.1 });
        
        ads.forEach(function(ad) {
          observer.observe(ad);
        });
      }

      // ===== PERFORMANCE MONITORING =====
      function trackPerformance() {
        // Track page load time
        window.addEventListener('load', function() {'
          setTimeout(function() {
            var loadTime = performance.timing.loadEventEnd - performance.timing.navigationStart;
            
            if (typeof gtag !== 'undefined') {'
              gtag('event', 'page_load_time', {'
                'tool_name': document.querySelector('h1').textContent,'
                'load_time_ms': loadTime,'
                'page_type': 'tool_detail''
              });
            }
          }, 0);
        });
      }

      // ===== USER ENGAGEMENT TRACKING =====
      function trackEngagement() {
        var startTime = Date.now();
        var isActive = true;
        
        // Track when user becomes inactive
        var inactivityTimer;
        function resetInactivityTimer() {
          clearTimeout(inactivityTimer);
          isActive = true;
          inactivityTimer = setTimeout(function() {
            isActive = false;
          }, 30000); // 30 seconds of inactivity
        }
        
        ['mousedown', 'mousemove', 'keypress', 'scroll', 'touchstart'].forEach(function(event) {'
          document.addEventListener(event, resetInactivityTimer, true);
        });
        
        // Track time on page when leaving
        window.addEventListener('beforeunload', function() {'
          var timeOnPage = Math.round((Date.now() - startTime) / 1000);
          
          if (typeof gtag !== 'undefined') {'
            gtag('event', 'time_on_page', {'
              'tool_name': document.querySelector('h1').textContent,'
              'time_seconds': timeOnPage,'
              'was_active': isActive'
            });
          }
        });
      }

      // ===== SEARCH FUNCTIONALITY =====
      function setupSearch() {
        // Quick search in page content
        var searchBtn = document.querySelector('.search-btn');'
        if (searchBtn) {
          searchBtn.addEventListener('click', function() {'
            var searchTerm = prompt('Suche auf dieser Seite:');'
            if (searchTerm) {
              var found = window.find(searchTerm);
              if (!found) {
                alert('Begriff nicht gefunden.');'
              }
            }
          });
        }
      }

      // ===== COPY TO CLIPBOARD FUNCTIONALITY =====
      function setupCopyFeatures() {
        // Add copy buttons to code blocks
        var codeBlocks = document.querySelectorAll('pre code');'
        codeBlocks.forEach(function(block) {
          var copyBtn = document.createElement('button');'
          copyBtn.textContent = 'Kopieren';'
          copyBtn.className = 'copy-btn';'
          copyBtn.addEventListener('click', function() {'
            navigator.clipboard.writeText(block.textContent).then(function() {
              copyBtn.textContent = 'Kopiert!';'
              setTimeout(function() {
                copyBtn.textContent = 'Kopieren';'
              }, 2000);
            });
          });
          
          block.parentNode.style.position = 'relative';'
          block.parentNode.appendChild(copyBtn);
        });
      }

      // ===== ACCESSIBILITY IMPROVEMENTS =====
      function setupAccessibility() {
        // Add skip links
        var skipLink = document.createElement('a');'
        skipLink.href = '#main-content';'
        skipLink.textContent = 'Zum Hauptinhalt springen';'
        skipLink.className = 'skip-link';'
        document.body.insertBefore(skipLink, document.body.firstChild);
        
        // Improve focus management
        document.addEventListener('keydown', function(e) {'
          if (e.key === 'Tab') {'
            document.body.classList.add('keyboard-nav');'
          }
        });
        
        document.addEventListener('mousedown', function() {'
          document.body.classList.remove('keyboard-nav');'
        });
      }

      // ===== INITIALIZE ALL FUNCTIONS =====
      try {
        initializeBookmarks();
        setupFAQ();
        setupTableOfContents();
        setupToolComparison();
        setupSearch();
        setupCopyFeatures();
        setupAccessibility();
        trackPerformance();
        trackEngagement();
        initAdSense();
        
        console.log('üöÄ Enhanced Tool Detail Page initialized successfully');'
      } catch (error) {
        console.error('Error initializing tool detail page:', error);'
      }
    });
  </script>

