---
import { getCollection } from "astro:content";

export async function getStaticPaths() {
  const tools = await getCollection("tools");
  return tools.map((tool) => ({
    params: { slug: tool.slug },
    props: { tool },
  }));
}

const { tool } = Astro.props;

if (!tool) {
  return Astro.redirect('/404');
}

const { data } = tool;

// Alle Tools für ähnliche Tools laden
const allTools = await getCollection("tools");
const similarTools = allTools
  .filter((t) => t.data.category === data.category && t.slug !== tool.slug)
  .slice(0, 6);

// FAQ generieren
function generateFAQ() {
  return [
    {
      question: `Ist ${data.title} kostenlos?`,
      answer: data.pricing === "Kostenlos" ? 
        `Ja, ${data.title} ist komplett kostenlos nutzbar.` :
        data.pricing === "Freemium" ?
        `${data.title} bietet eine kostenlose Basisversion und Premium-Pläne.` :
        `${data.title} ist ein Premium-Tool.`
    },
    {
      question: `Für wen eignet sich ${data.title}?`,
      answer: `${data.title} eignet sich für ${data.category.toLowerCase()}-Anwender und alle, die ihre Produktivität steigern möchten.`
    }
  ];
}

const faqItems = generateFAQ();
---

<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{data.title} - Test & Bewertung 2025</title>
  <meta name="description" content={`${data.title} im Test: ${data.description}`} />
  
  <script is:inline>
    (function() {
      function setTheme() {
        var theme = 'light';
        if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
          theme = localStorage.getItem('theme');
        } else if (window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches) {
          theme = 'dark';
        }
        
        if (theme === 'dark') {
          document.documentElement.classList.add('dark');
          document.documentElement.setAttribute('data-theme', 'dark');
        } else {
          document.documentElement.classList.remove('dark');
          document.documentElement.setAttribute('data-theme', 'light');
        }
        
        if (typeof localStorage !== 'undefined') {
          localStorage.setItem('theme', theme);
        }
      }
      
      setTheme();
    })();
  </script>

  <style>
    :root {
      --bg-primary: #f8fafc;
      --bg-secondary: #ffffff;
      --text-primary: #1e293b;
      --text-secondary: #64748b;
      --border-primary: #e2e8f0;
      --accent-primary: #3b82f6;
      --accent-secondary: #2563eb;
      --success-color: #10b981;
      --shadow-light: rgba(0, 0, 0, 0.1);
      --card-bg: #ffffff;
    }

    [data-theme="dark"] {
      --bg-primary: #0f172a;
      --bg-secondary: #1e293b;
      --text-primary: #f1f5f9;
      --text-secondary: #cbd5e1;
      --border-primary: #334155;
      --accent-primary: #60a5fa;
      --accent-secondary: #3b82f6;
      --success-color: #34d399;
      --shadow-light: rgba(0, 0, 0, 0.3);
      --card-bg: #1e293b;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      transition: background-color 0.3s ease, color 0.3s ease;
    }
    
    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
      line-height: 1.6;
      color: var(--text-primary);
      background: var(--bg-primary);
    }

    .nav {
      background: var(--bg-secondary);
      border-bottom: 1px solid var(--border-primary);
      padding: 1rem 0;
      position: sticky;
      top: 0;
      z-index: 1000;
    }
    
    .nav-container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 2rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    
    .nav-logo {
      font-size: 1.5rem;
      font-weight: 700;
      color: var(--text-primary);
      text-decoration: none;
    }
    
    .nav-links {
      display: flex;
      gap: 2rem;
      list-style: none;
    }
    
    .nav-links a {
      color: var(--text-secondary);
      text-decoration: none;
      font-weight: 500;
    }
    
    .nav-links a:hover {
      color: var(--text-primary);
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 2rem;
    }

    .hero {
      background: var(--card-bg);
      padding: 3rem;
      border-radius: 12px;
      margin-bottom: 3rem;
      border: 1px solid var(--border-primary);
      text-align: center;
    }

    .hero h1 {
      font-size: 2.5rem;
      font-weight: 800;
      margin-bottom: 1rem;
      color: var(--text-primary);
    }

    .hero-description {
      font-size: 1.2rem;
      color: var(--text-secondary);
      margin-bottom: 2rem;
      max-width: 600px;
      margin-left: auto;
      margin-right: auto;
    }

    .hero-badges {
      display: flex;
      gap: 0.75rem;
      margin-bottom: 2rem;
      flex-wrap: wrap;
      justify-content: center;
    }

    .badge {
      padding: 0.25rem 0.75rem;
      border-radius: 20px;
      font-size: 0.8rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .badge-popular { background: #fee2e2; color: #dc2626; }
    .badge-free { background: #d1fae5; color: #047857; }
    .badge-new { background: #fef3c7; color: #d97706; }
    .badge-api { background: #f3e8ff; color: #7c3aed; }

    [data-theme="dark"] .badge-popular { background: rgba(220, 38, 38, 0.2); color: #f87171; }
    [data-theme="dark"] .badge-free { background: rgba(4, 120, 87, 0.2); color: #34d399; }
    [data-theme="dark"] .badge-new { background: rgba(217, 119, 6, 0.2); color: #fbbf24; }
    [data-theme="dark"] .badge-api { background: rgba(124, 58, 237, 0.2); color: #c4b5fd; }

    .hero-cta {
      background: var(--accent-primary);
      color: white;
      padding: 1rem 2rem;
      border-radius: 8px;
      text-decoration: none;
      font-weight: 700;
      font-size: 1.1rem;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      transition: all 0.3s ease;
    }

    .hero-cta:hover {
      background: var(--accent-secondary);
      transform: translateY(-2px);
    }

    .content-section {
      background: var(--card-bg);
      padding: 2rem;
      border-radius: 12px;
      margin-bottom: 2rem;
      border: 1px solid var(--border-primary);
    }

    .section-title {
      font-size: 1.5rem;
      font-weight: 700;
      margin-bottom: 1rem;
      color: var(--text-primary);
    }

    .pricing-plan {
      background: var(--bg-primary);
      padding: 1.5rem;
      border-radius: 8px;
      border: 1px solid var(--border-primary);
      margin-bottom: 1rem;
    }

    .plan-name {
      font-size: 1.2rem;
      font-weight: 700;
      margin-bottom: 0.5rem;
      color: var(--text-primary);
    }

    .plan-price {
      font-size: 2rem;
      font-weight: 800;
      color: var(--accent-primary);
      margin-bottom: 1rem;
    }

    .plan-features {
      list-style: none;
    }

    .plan-features li {
      padding: 0.25rem 0;
      color: var(--text-secondary);
    }

    .plan-features li::before {
      content: "✓";
      color: var(--success-color);
      font-weight: bold;
      margin-right: 0.5rem;
    }

    .faq-item {
      border-bottom: 1px solid var(--border-primary);
      padding: 1.5rem 0;
    }

    .faq-question {
      font-size: 1.1rem;
      font-weight: 600;
      margin-bottom: 0.5rem;
      color: var(--text-primary);
    }

    .faq-answer {
      color: var(--text-secondary);
      line-height: 1.6;
    }

    .similar-tools {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 1.5rem;
      margin-top: 2rem;
    }

    .tool-card {
      background: var(--bg-primary);
      padding: 1.5rem;
      border-radius: 8px;
      border: 1px solid var(--border-primary);
      transition: all 0.3s ease;
    }

    .tool-card:hover {
      transform: translateY(-2px);
      border-color: var(--accent-primary);
    }

    .tool-card h4 {
      font-size: 1.1rem;
      font-weight: 600;
      margin-bottom: 0.5rem;
      color: var(--text-primary);
    }

    .tool-card p {
      color: var(--text-secondary);
      font-size: 0.9rem;
      margin-bottom: 1rem;
    }

    .tool-card a {
      color: var(--accent-primary);
      text-decoration: none;
      font-weight: 500;
    }

    @media (max-width: 768px) {
      .hero h1 {
        font-size: 2rem;
      }

      .container {
        padding: 1rem;
      }

      .nav-links {
        display: none;
      }
    }
  </style>
</head>
<body>
  <nav class="nav">
    <div class="nav-container">
      <a href="/" class="nav-logo">AI Tool Vault</a>
      <ul class="nav-links">
        <li><a href="/">Home</a></li>
        <li><a href="/tools">Tools</a></li>
        <li><a href="/impressum">Impressum</a></li>
        <li><a href="/kontakt">Kontakt</a></li>
        <li><a href="/datenschutz">Datenschutz</a></li>
      </ul>
    </div>
  </nav>

  <div class="container">
    <section class="hero">
      <div class="hero-badges">
        {data.pricing === "Kostenlos" && <span class="badge badge-free">Kostenlos</span>}
        {data.api_available && <span class="badge badge-api">API</span>}
        {data.founded && parseInt(data.founded) >= 2023 && <span class="badge badge-new">Neu</span>}
      </div>
      
      <h1>{data.title}</h1>
      <p class="hero-description">{data.description}</p>
      
      {data.rating && (
        <div style="margin-bottom: 2rem;">
          <span style="color: #fbbf24; font-size: 1.2rem;">⭐ {data.rating}/5</span>
        </div>
      )}
      
      <a href={data.affiliate_link} target="_blank" rel="noopener noreferrer" class="hero-cta">
        Tool testen →
      </a>
    </section>

    <div class="content-section">
      <h2 class="section-title">Über {data.title}</h2>
      <p>
        {data.title} ist ein führendes KI-Tool in der Kategorie {data.category}. 
        {data.description}
      </p>
      
      {data.founded && data.company && (
        <p style="margin-top: 1rem;">
          Gegründet im Jahr {data.founded} von {data.company}.
        </p>
      )}
    </div>

    {data.pricing_details && (
      <div class="content-section">
        <h2 class="section-title">Preise & Pläne</h2>
        
        {data.pricing_details.free_plan && (
          <div class="pricing-plan">
            <div class="plan-name">Kostenlos</div>
            <div class="plan-price">0€</div>
            <ul class="plan-features">
              {data.pricing_details.free_plan.features.map((feature) => (
                <li>{feature}</li>
              ))}
            </ul>
          </div>
        )}
        
        {data.pricing_details.paid_plans && data.pricing_details.paid_plans.map((plan) => (
          <div class="pricing-plan">
            <div class="plan-name">{plan.name}</div>
            <div class="plan-price">
              {typeof plan.price === 'number' ? `${plan.price}€` : plan.price}
              {plan.per_user ? '/Nutzer' : ''}
            </div>
            <ul class="plan-features">
              {plan.features.map((feature) => (
                <li>{feature}</li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    )}

    {(data.pros || data.cons) && (
      <div class="content-section">
        <h2 class="section-title">Vor- und Nachteile</h2>
        
        {data.pros && (
          <div style="margin-bottom: 2rem;">
            <h3 style="color: var(--success-color); margin-bottom: 1rem;">✅ Vorteile:</h3>
            <ul style="padding-left: 1.5rem;">
              {data.pros.map((pro) => <li style="margin-bottom: 0.5rem;">{pro}</li>)}
            </ul>
          </div>
        )}
        
        {data.cons && (
          <div>
            <h3 style="color: #ef4444; margin-bottom: 1rem;">❌ Nachteile:</h3>
            <ul style="padding-left: 1.5rem;">
              {data.cons.map((con) => <li style="margin-bottom: 0.5rem;">{con}</li>)}
            </ul>
          </div>
        )}
      </div>
    )}

    {data.use_cases && (
      <div class="content-section">
        <h2 class="section-title">Anwendungsfälle</h2>
        <ul style="padding-left: 1.5rem;">
          {data.use_cases.map((useCase) => (
            <li style="margin-bottom: 0.5rem;">{useCase}</li>
          ))}
        </ul>
      </div>
    )}

    <div class="content-section">
      <h2 class="section-title">Häufige Fragen</h2>
      {faqItems.map((faq) => (
        <div class="faq-item">
          <h3 class="faq-question">{faq.question}</h3>
          <p class="faq-answer">{faq.answer}</p>
        </div>
      ))}
    </div>

    {similarTools.length > 0 && (
      <div class="content-section">
        <h2 class="section-title">Ähnliche Tools</h2>
        <div class="similar-tools">
          {similarTools.map((similarTool) => (
            <div class="tool-card">
              <h4>{similarTool.data.title}</h4>
              <p>{similarTool.data.description}</p>
              <a href={`/tools/${similarTool.slug}`}>Mehr erfahren →</a>
            </div>
          ))}
        </div>
      </div>
    )}
  </div>
</body>
</html>
