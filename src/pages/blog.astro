    color: white;
    padding: 6rem 2rem 4rem;
    text-align: center;
    /* PERFORMANCE: GPU acceleration */
    will-change: transform;
  }

  .hero h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .hero p {
    font-size: 1.3rem;
    opacity: 0.9;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 3rem 2rem;
  }

  .posts-grid {
