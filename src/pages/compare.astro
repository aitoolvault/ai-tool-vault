    }

    .btn-small {
      padding: 0.5rem 1rem;
      border-radius: 6px;
      text-decoration: none;
      font-size: 0.85rem;
      font-weight: 600;
      text-align: center;
    }

    .btn-primary {
      background: var(--accent-primary);
      color: white;
    }

    .btn-secondary {
      background: var(--bg-primary);
      color: var(--text-primary);
      border: 1px solid var(--border-primary);
    }

    .btn-primary:hover, .btn-secondary:hover {
      opacity: 0.9;
    }

    @media (max-width: 768px) {
      .nav-links {
        display: none;
      }

      .header h1 {
        font-size: 2rem;
      }

      .container {
        padding: 1rem;
      }

      .table th, .table td {
        padding: 0.75rem;
        font-size: 0.9rem;
      }

      .tool-actions {
        flex-direction: column;
      }
    }
  </style>
</head>
<body>
  <nav class="nav">
    <div class="nav-container">
      <a href="/" class="nav-logo">AI Tool Vault</a>
      <ul class="nav-links">
        <li><a href="/">Home</a></li>
        <li><a href="/tools">Tools</a></li>
        <li><a href="/impressum">Impressum</a></li>
        <li><a href="/datenschutz">Datenschutz</a></li>
      </ul>
    </div>
  </nav>

  <div class="container">
    <div class="header">
      <h1>Tool-Vergleich</h1>
      <p>Vergleiche die ausgew√§hlten KI-Tools direkt miteinander</p>
    </div>

    {error ? (
      <div class="error-section">
        <div class="error-icon">üîç</div>
        <div class="error-title">Keine Tools ausgew√§hlt</div>
        <div class="error-message">{error}</div>
        <a href="/tools" class="back-btn">Zur√ºck zu Tools</a>
      </div>
    ) : (
      <div class="comparison-table">
        <table class="table">
          <thead>
            <tr>
              <th class="feature-label">Feature</th>
              {comparisonData.map(tool => (
                <th class="tool-header">{tool.data.title}</th>
              ))}
            </tr>
          </thead>
          <tbody>
            <!-- Beschreibung -->
            <tr>
              <td class="feature-label">Beschreibung</td>
              {comparisonData.map(tool => (
                <td>{tool.data.description}</td>
              ))}
            </tr>

            <!-- Kategorie -->
            <tr>
              <td class="feature-label">Kategorie</td>
              {comparisonData.map(tool => (
                <td>{tool.data.category}</td>
              ))}
            </tr>

            <!-- Preis -->
            <tr>
              <td class="feature-label">Preismodell</td>
              {comparisonData.map(tool => (
                <td>
                  <span class={`badge badge-${tool.data.pricing.toLowerCase().replace(/[^a-z]/g, '')}`}>
                    {tool.data.pricing}
                  </span>
                </td>
              ))}
            </tr>

            <!-- Bewertung -->
            <tr>
              <td class="feature-label">Bewertung</td>
              {comparisonData.map(tool => (
                <td>
                  {tool.data.rating ? (
                    <div>
                      <span class="rating-stars">
                        {'‚òÖ'.repeat(Math.floor(tool.data.rating))}{'‚òÜ'.repeat(5-Math.floor(tool.data.rating))}
                      </span>
                      <span>{tool.data.rating}/5</span>
                    </div>
                  ) : (
                    <span>Nicht bewertet</span>
                  )}
                </td>
              ))}
            </tr>

            <!-- API verf√ºgbar -->
            <tr>
              <td class="feature-label">API verf√ºgbar</td>
              {comparisonData.map(tool => (
                <td>
                  {tool.data.api_available ? (
                    <span class="check-icon">‚úÖ Ja</span>
                  ) : (
                    <span class="cross-icon">‚ùå Nein</span>
                  )}
                </td>
              ))}
            </tr>

            <!-- Mobile App -->
            <tr>
              <td class="feature-label">Mobile App</td>
              {comparisonData.map(tool => (
                <td>
                  {tool.data.mobile_app ? (
                    <span class="check-icon">‚úÖ Ja</span>
                  ) : (
                    <span class="cross-icon">‚ùå Nein</span>
                  )}
                </td>
              ))}
            </tr>

            <!-- Kostenlose Testversion -->
            <tr>
              <td class="feature-label">Kostenlose Testversion</td>
              {comparisonData.map(tool => (
                <td>
                  {tool.data.free_trial ? (
                    <span class="check-icon">‚úÖ Ja</span>
                  ) : (
                    <span class="cross-icon">‚ùå Nein</span>
                  )}
                </td>
              ))}
            </tr>

            <!-- Gegr√ºndet -->
            <tr>
              <td class="feature-label">Gegr√ºndet</td>
              {comparisonData.map(tool => (
                <td>{tool.data.founded || 'N/A'}</td>
              ))}
            </tr>

            <!-- Unternehmen -->
            <tr>
              <td class="feature-label">Unternehmen</td>
              {comparisonData.map(tool => (
                <td>{tool.data.company || 'N/A'}</td>
              ))}
            </tr>

            <!-- Aktionen -->
            <tr>
              <td class="feature-label">Aktionen</td>
              {comparisonData.map(tool => (
                <td>
                  <div class="tool-actions">
                    <a href={`/tools/${tool.slug}`} class="btn-small btn-secondary">
                      Details
                    </a>
                    <a href={tool.data.affiliate_link} 
                       target="_blank" 
                       rel="noopener noreferrer" 
                       class="btn-small btn-primary">
                      Tool testen
                    </a>
                  </div>
                </td>
              ))}
            </tr>
          </tbody>
        </table>
      </div>
    )}

    <div style="text-align: center; margin-top: 3rem;">
      <a href="/tools" class="back-btn">‚Üê Zur√ºck zu allen Tools</a>
    </div>
  </div>

  <script>
    // Theme support
    document.addEventListener('DOMContentLoaded', function() {
      const savedTheme = localStorage.getItem('theme') || 'light';
      document.documentElement.setAttribute('data-theme', savedTheme);
      
      // Analytics tracking
      if (typeof gtag !== 'undefined') {
        const urlParams = new URLSearchParams(window.location.search);
        const toolsParam = urlParams.get('tools');
        
        if (toolsParam) {
          const toolNames = toolsParam.split(',');
          gtag('event', 'tool_comparison_view', {
            'tools_compared': toolNames.join(','),
            'tool_count': toolNames.length,
            'source': 'compare_page'
          });
        }
      }
    });
  </script>
</body>
</html>
