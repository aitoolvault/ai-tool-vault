    .badge-freemium { background: #dbeafe; color: #1e40af; }
    .badge-kostenpflichtig { background: #fee2e2; color: #dc2626; }

    .check-icon { color: var(--success-color); }
    .cross-icon { color: var(--error-color); }

    .rating-stars {
      color: #fbbf24;
      font-size: 1.1rem;
    }

    .tool-actions {
