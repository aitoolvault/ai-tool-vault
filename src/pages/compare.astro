  <script>
    // View Toggle
    document.addEventListener('DOMContentLoaded', function() {
      const cardViewBtn = document.getElementById('cardViewBtn');
      const tableViewBtn = document.getElementById('tableViewBtn');
      const cardView = document.getElementById('cardView');
      const tableView = document.getElementById('tableView');

      if (cardViewBtn && tableViewBtn && cardView && tableView) {
        // Load saved view preference
        const savedView = localStorage.getItem('comparisonView') || 'card';

        if (savedView === 'table') {
          cardView.classList.add('hidden');
          tableView.classList.remove('hidden');
          cardViewBtn.classList.remove('active');
          tableViewBtn.classList.add('active');
        }

        cardViewBtn.addEventListener('click', function() {
          cardView.classList.remove('hidden');
          tableView.classList.add('hidden');
          cardViewBtn.classList.add('active');
          tableViewBtn.classList.remove('active');
          localStorage.setItem('comparisonView', 'card');

          // Track view switch
          if (typeof gtag !== 'undefined') {
            gtag('event', 'comparison_view_switch', {
              'view_type': 'card',
              'source': 'compare_page'
            });
          }
        });

        tableViewBtn.addEventListener('click', function() {
          cardView.classList.add('hidden');
          tableView.classList.remove('hidden');
          cardViewBtn.classList.remove('active');
          tableViewBtn.classList.add('active');
          localStorage.setItem('comparisonView', 'table');

          // Track view switch
          if (typeof gtag !== 'undefined') {
            gtag('event', 'comparison_view_switch', {
              'view_type': 'table',
              'source': 'compare_page'
            });
          }
        });
      }

      // Analytics tracking
      if (typeof gtag !== 'undefined') {
        const urlParams = new URLSearchParams(window.location.search);
        const toolsParam = urlParams.get('tools');

        if (toolsParam) {
          const toolNames = toolsParam.split(',');
          gtag('event', 'tool_comparison_view', {
            'tools_compared': toolNames.join(','),
            'tool_count': toolNames.length,
            'source': 'compare_page'
          });
        }
      }

      // Tool Selector functionality
      const toolCheckboxes = document.querySelectorAll('.tool-checkbox');
      const selectedToolsDisplay = document.getElementById('selectedToolsDisplay');
      const selectedToolsList = document.getElementById('selectedToolsList');
      const selectedCount = document.getElementById('selectedCount');
      const compareBtn = document.getElementById('compareBtn');
      const clearSelectionBtn = document.getElementById('clearSelectionBtn');
      const toolSearchInput = document.getElementById('toolSearchInput');
      const toolsGrid = document.getElementById('toolsGrid');

      let selectedTools = [];

      function updateSelectedDisplay() {
        if (selectedTools.length > 0) {
          selectedToolsDisplay.style.display = 'block';
          selectedCount.textContent = selectedTools.length;

          selectedToolsList.innerHTML = selectedTools.map(tool => `
            <div class="selected-tool-tag">
              ${tool}
              <button class="remove-tool-btn" data-tool="${tool}">√ó</button>
            </div>
          `).join('');

          // Enable compare button if at least 2 tools selected
          compareBtn.disabled = selectedTools.length < 2;

          // Add remove button listeners
          document.querySelectorAll('.remove-tool-btn').forEach(btn => {
            btn.addEventListener('click', function() {
              const toolName = this.getAttribute('data-tool');
              const checkbox = document.querySelector(`.tool-checkbox[value="${toolName}"]`);
              if (checkbox) {
                checkbox.checked = false;
                selectedTools = selectedTools.filter(t => t !== toolName);
                updateSelectedDisplay();
              }
            });
          });
        } else {
          selectedToolsDisplay.style.display = 'none';
        }
      }

      // Handle checkbox changes
      toolCheckboxes.forEach(checkbox => {
        checkbox.addEventListener('change', function() {
          const toolName = this.value;

          if (this.checked) {
            if (!selectedTools.includes(toolName)) {
              selectedTools.push(toolName);
            }
          } else {
            selectedTools = selectedTools.filter(t => t !== toolName);
          }

          updateSelectedDisplay();

          // Automatisch Vergleich starten, wenn 2 oder mehr Tools ausgew√§hlt sind
          if (selectedTools.length >= 2) {
            setTimeout(() => {
              const toolsParam = selectedTools.join(',');
              window.location.href = `/compare?tools=${encodeURIComponent(toolsParam)}`;
            }, 500); // Kurze Verz√∂gerung f√ºr bessere UX
          }
        });
      });

      // Clear selection
      if (clearSelectionBtn) {
        clearSelectionBtn.addEventListener('click', function() {
          selectedTools = [];
          toolCheckboxes.forEach(cb => cb.checked = false);
          updateSelectedDisplay();
        });
      }

      // Compare button
      if (compareBtn) {
        compareBtn.addEventListener('click', function() {
          if (selectedTools.length >= 2) {
            const toolsParam = selectedTools.join(',');
            window.location.href = `/compare?tools=${encodeURIComponent(toolsParam)}`;
          }
        });
      }

      // Search functionality
      if (toolSearchInput && toolsGrid) {
        toolSearchInput.addEventListener('input', function() {
          const searchTerm = this.value.toLowerCase();
          const toolCards = toolsGrid.querySelectorAll('.tool-select-card');

          toolCards.forEach(card => {
            const toolName = card.getAttribute('data-tool-name').toLowerCase();
            if (toolName.includes(searchTerm)) {
              card.style.display = 'block';
            } else {
              card.style.display = 'none';
            }
          });
        });
      }
    });
  </script>
