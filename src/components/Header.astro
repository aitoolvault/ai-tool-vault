<header class="header-main">
  <div class="header-container">
    <a href="/" class="header-logo">
      AI Tool Vault
    </a>

    <nav class="header-nav" id="headerNav">
      <a href="/" class="nav-item">Home</a>
      <a href="/tools" class="nav-item">Tools</a>
      <a href="/blog" class="nav-item">Blog</a>
      <a href="/compare" class="nav-item">Vergleich</a>
      <a href="/#categories" class="nav-item">Kategorien</a>
      <a href="/kontakt" class="nav-item">Kontakt</a>
      <a href="/impressum" class="nav-item">Impressum</a>
    </nav>

    <div class="header-actions">
      <button onclick="toggleTheme()" class="theme-toggle-button" aria-label="Theme wechseln">
        ‚òÄÔ∏è / üåô
      </button>
      <button class="mobile-menu-toggle" id="mobileMenuToggle" aria-label="Men√º √∂ffnen">
        <span class="hamburger-line"></span>
        <span class="hamburger-line"></span>
        <span class="hamburger-line"></span>
      </button>
    </div>
  </div>
</header>

<style>
  .header-main {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
    box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
    transition: all 0.3s ease;
  }

  [data-theme="dark"] .header-main {
    background: linear-gradient(135deg, #2563eb 0%, #7c3aed 100%);
    box-shadow: 0 4px 12px rgba(37, 99, 235, 0.4);
  }

  .header-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 1.5rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 2rem;
  }

  .header-logo {
    font-size: 1.5rem;
    font-weight: 800;
    color: white;
    text-decoration: none;
    white-space: nowrap;
    transition: transform 0.2s ease;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
  }

  [data-theme="dark"] .header-logo {
    color: white;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }

  .header-logo:hover {
    transform: scale(1.02);
  }

  .header-nav {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    flex: 1;
    justify-content: center;
  }

  .nav-item {
    color: rgba(255, 255, 255, 0.9);
    text-decoration: none;
    font-weight: 500;
    font-size: 1rem;
    transition: all 0.2s ease;
    white-space: nowrap;
  }

  [data-theme="dark"] .nav-item {
    color: rgba(255, 255, 255, 0.85);
  }

  .nav-item:hover {
    color: white;
    text-shadow: 0 0 8px rgba(255, 255, 255, 0.5);
  }

  [data-theme="dark"] .nav-item:hover {
    color: white;
    text-shadow: 0 0 8px rgba(255, 255, 255, 0.5);
  }

  .header-actions {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .theme-toggle-button {
    padding: 0.5rem 1rem;
    border-radius: 9999px;
    background: rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(10px);
    color: white;
    font-weight: 600;
    border: 1px solid rgba(255, 255, 255, 0.3);
    cursor: pointer;
    font-size: 1rem;
    transition: all 0.2s ease;
    white-space: nowrap;
  }

  .theme-toggle-button:hover {
    background: rgba(255, 255, 255, 0.3);
    border-color: rgba(255, 255, 255, 0.5);
    transform: scale(1.05);
  }

  .mobile-menu-toggle {
    display: none;
    flex-direction: column;
    gap: 4px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 8px;
  }

  .hamburger-line {
    width: 24px;
    height: 3px;
    background: white;
    border-radius: 2px;
    transition: all 0.3s ease;
  }

  [data-theme="dark"] .hamburger-line {
    background: white;
  }

  .mobile-menu-toggle.active .hamburger-line:nth-child(1) {
    transform: translateY(7px) rotate(45deg);
  }

  .mobile-menu-toggle.active .hamburger-line:nth-child(2) {
    opacity: 0;
  }

  .mobile-menu-toggle.active .hamburger-line:nth-child(3) {
    transform: translateY(-7px) rotate(-45deg);
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .header-nav {
      gap: 1rem;
    }

    .nav-item {
      font-size: 0.9rem;
    }
  }

  @media (max-width: 768px) {
    .header-container {
      padding: 1rem 1.5rem;
    }

    .header-nav {
      position: fixed;
      top: 72px;
      left: 0;
      right: 0;
      flex-direction: column;
      background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
      padding: 1rem;
      box-shadow: 0 4px 12px rgba(59, 130, 246, 0.4);
      transform: translateY(-100%);
      opacity: 0;
      visibility: hidden;
      transition: all 0.3s ease;
    }

    [data-theme="dark"] .header-nav {
      background: linear-gradient(135deg, #2563eb 0%, #7c3aed 100%);
    }

    .header-nav.active {
      transform: translateY(0);
      opacity: 1;
      visibility: visible;
    }

    .nav-item {
      width: 100%;
      text-align: center;
      padding: 0.75rem;
      font-size: 1rem;
    }

    .mobile-menu-toggle {
      display: flex;
    }

    .theme-toggle-button {
      padding: 0.5rem 0.75rem;
      font-size: 0.9rem;
    }
  }

  @media (max-width: 480px) {
    .header-logo {
      font-size: 1.25rem;
    }

    .theme-toggle-button {
      padding: 0.4rem 0.6rem;
      font-size: 0.85rem;
    }
  }
</style>

<script is:inline>
  function toggleTheme() {
    const html = document.documentElement;
    const currentTheme = html.getAttribute('data-theme') || 'light';
    const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
    html.setAttribute('data-theme', newTheme);
    localStorage.setItem('theme', newTheme);

    if (typeof gtag !== 'undefined') {
      gtag('event', 'theme_toggle', {
        theme_mode: newTheme,
        source: 'header'
      });
    }
  }

  window.addEventListener('DOMContentLoaded', () => {
    const saved = localStorage.getItem('theme');
    if (saved) {
      document.documentElement.setAttribute('data-theme', saved);
    }

    // Mobile Menu Toggle
    const mobileMenuToggle = document.getElementById('mobileMenuToggle');
    const headerNav = document.getElementById('headerNav');

    if (mobileMenuToggle && headerNav) {
      mobileMenuToggle.addEventListener('click', function() {
        const isActive = headerNav.classList.contains('active');

        if (isActive) {
          headerNav.classList.remove('active');
          mobileMenuToggle.classList.remove('active');
          mobileMenuToggle.setAttribute('aria-label', 'Men√º √∂ffnen');
        } else {
          headerNav.classList.add('active');
          mobileMenuToggle.classList.add('active');
          mobileMenuToggle.setAttribute('aria-label', 'Men√º schlie√üen');
        }
      });

      // Close menu when clicking outside
      document.addEventListener('click', function(e) {
        if (!e.target.closest('.header-main') && headerNav.classList.contains('active')) {
          headerNav.classList.remove('active');
          mobileMenuToggle.classList.remove('active');
          mobileMenuToggle.setAttribute('aria-label', 'Men√º √∂ffnen');
        }
      });

      // Close menu when clicking on nav items
      headerNav.querySelectorAll('.nav-item').forEach(item => {
        item.addEventListener('click', function() {
          headerNav.classList.remove('active');
          mobileMenuToggle.classList.remove('active');
          mobileMenuToggle.setAttribute('aria-label', 'Men√º √∂ffnen');
        });
      });
    }
  });
</script>
