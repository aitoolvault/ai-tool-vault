---
// Internal Linking Component f√ºr besseres SEO
import { getCollection } from 'astro:content';

export interface Props {
  currentTool?: string;
  category?: string;
  limit?: number;
}

const { currentTool, category, limit = 5 } = Astro.props;
const allTools = await getCollection('tools');

// Intelligente Tool-Vorschl√§ge basierend auf Kategorie und Popularit√§t
let relatedTools = allTools
  .filter(tool => {
    if (currentTool && tool.slug === currentTool) return false;
    if (category) return tool.data.category === category;
    return true;
  })
  .sort((a, b) => {
    // Sortiere nach: 1. Featured, 2. Rating, 3. Alphabetisch
    if (a.data.featured && !b.data.featured) return -1;
    if (!a.data.featured && b.data.featured) return 1;
    if (a.data.rating && b.data.rating) {
      return b.data.rating - a.data.rating;
    }
    return a.data.name.localeCompare(b.data.name);
  })
  .slice(0, limit);

// Keywords f√ºr interne Verlinkung
const linkKeywords = {
  'chatgpt': ['ChatGPT', 'GPT-4', 'OpenAI'],
  'claude': ['Claude', 'Anthropic'],
  'gemini': ['Gemini', 'Google AI'],
  'midjourney': ['Midjourney', 'AI Bilder'],
  'jasper': ['Jasper AI', 'Content Marketing'],
  'notion-ai': ['Notion AI', 'Produktivit√§t'],
  'grammarly': ['Grammarly', 'Grammatik'],
  'copy-ai': ['Copy.ai', 'Copywriting'],
};
---

<aside class="related-tools-widget">
  <h3>üîó Verwandte Tools</h3>
  <div class="related-tools-list">
    {relatedTools.map(tool => (
      <a href={`/tools/${tool.slug}`} class="related-tool-link">
        <div class="tool-info">
          <span class="tool-name">{tool.data.name}</span>
          {tool.data.rating && (
            <span class="tool-rating">‚≠ê {tool.data.rating}</span>
          )}
        </div>
        <span class="tool-category">{tool.data.category}</span>
      </a>
    ))}
  </div>
  
  <a href="/tools" class="view-all-link">
    Alle {allTools.length} KI-Tools ansehen ‚Üí
  </a>
</aside>

<!-- Contextual Links f√ºr SEO -->
<div class="contextual-links">
  <h4>üìö Beliebte Kategorien</h4>
  <div class="category-links">
    <a href="/tools?category=Chatbot">KI-Chatbots</a>
    <a href="/tools?category=Bildgenerierung">Bildgenerierung</a>
    <a href="/tools?category=Content Marketing">Content Marketing</a>
    <a href="/tools?category=Code">Code-Tools</a>
    <a href="/tools?category=Produktivit√§t">Produktivit√§t</a>
  </div>
</div>

<!-- Quick Comparison Links -->
<div class="quick-comparisons">
  <h4>‚öñÔ∏è Beliebte Vergleiche</h4>
  <div class="comparison-links">
    <a href="/vergleich/chatgpt-vs-claude">ChatGPT vs Claude</a>
    <a href="/vergleich/chatgpt-vs-gemini">ChatGPT vs Gemini</a>
