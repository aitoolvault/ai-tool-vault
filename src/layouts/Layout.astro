---
import Navigation from '../components/Navigation.astro';

export interface Props {
  title: string;
  description?: string;
  image?: string;
  canonicalURL?: string;
  type?: 'website' | 'article';
}

const {
  title,
  description = "Die besten KI-Tools entdecken",
  image = "/og-image.jpg",
  canonicalURL = Astro.url.href,
  type = 'website'
} = Astro.props;

const siteName = "AI Tool Vault";
const siteURL = "https://aitoolvault.de";
---

<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <title>{title}</title>
  <meta name="title" content={title} />
  <meta name="description" content={description} />
  <meta name="keywords" content="KI-Tools, AI Tools, künstliche Intelligenz, ChatGPT, Claude, Midjourney, AI Vergleich" />
  <meta name="author" content="AI Tool Vault" />
  <meta name="robots" content="index, follow" />
  <link rel="canonical" href={canonicalURL} />

  <script is:inline>
    // Theme initialization
    (function() {
      const savedTheme = localStorage.getItem('theme') || 'light';
      document.documentElement.setAttribute('data-theme', savedTheme);
    })();
  </script>
  
  <meta property="og:type" content={type} />
  <meta property="og:url" content={canonicalURL} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={`${siteURL}${image}`} />
  <meta property="og:site_name" content={siteName} />
  <meta property="og:locale" content="de_DE" />
  
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:url" content={canonicalURL} />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={`${siteURL}${image}`} />
  
  <link rel="icon" type="image/x-icon" href="/favicon.ico" />
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
  
  <link rel="preconnect" href="https://www.googletagmanager.com" crossorigin>
  <link rel="preconnect" href="https://consent.cookiebot.com" crossorigin>
  <link rel="preconnect" href="https://pagead2.googlesyndication.com" crossorigin>
  <link rel="dns-prefetch" href="https://www.google-analytics.com">
  <link rel="dns-prefetch" href="https://googleads.g.doubleclick.net">
  <link rel="dns-prefetch" href="https://www.clarity.ms">
  
  <script id="Cookiebot" src="https://consent.cookiebot.com/uc.js" data-cbid="6ff1c2bf-6e6e-4ddb-b46e-b43b350bc9d0" data-blockingmode="auto" type="text/javascript"></script>
  
  <script is:inline>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    
    gtag('consent', 'default', {
      'ad_storage': 'denied',
      'ad_user_data': 'denied',
      'ad_personalization': 'denied',
      'analytics_storage': 'denied',
      'functionality_storage': 'denied',
      'personalization_storage': 'denied',
      'security_storage': 'granted',
      'wait_for_update': 500
    });
    
    gtag('set', 'ads_data_redaction', true);
    gtag('set', 'url_passthrough', true);
  </script>
  
  <script is:inline>
    (function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
    new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
    j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
    'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
    })(window,document,'script','dataLayer','GTM-M8SMR588');
  </script>

  <script is:inline>
    window.addEventListener('CookiebotOnAccept', function (e) {
      if (Cookiebot.consent.statistics) {
        dataLayer.push({
          'event': 'cookie_consent_statistics'
        });
      }
      if (Cookiebot.consent.marketing) {
        dataLayer.push({
          'event': 'cookie_consent_marketing'
        });
        
        if (!window.adsenseLoaded) {
          window.adsenseLoaded = true;
          const script = document.createElement('script');
          script.src = 'https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-5595876978844902';
          script.async = true;
          script.crossOrigin = 'anonymous';
          script.setAttribute('data-consent', 'granted');
          document.head.appendChild(script);
        }
      }
    }, false);
    
    window.addEventListener('CookiebotOnDecline', function (e) {
      dataLayer.push({
        'event': 'cookie_consent_declined'
      });
    }, false);
  </script>

  <script type="text/javascript" is:inline>
    (function(c,l,a,r,i,t,y){
      c[a]=c[a]||function(){(c[a].q=c[a].q||[]).push(arguments)};
      t=l.createElement(r);t.async=1;t.src="https://www.clarity.ms/tag/"+i;
      y=l.getElementsByTagName(r)[0];y.parentNode.insertBefore(t,y);
    })(window, document, "clarity", "script", "p7h0pwb5x7");
  </script>
  
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "WebSite",
    "name": siteName,
    "url": siteURL,
    "description": "Entdecken Sie die besten KI-Tools für Ihr Business. Vergleichen Sie Preise, Features und Bewertungen.",
    "potentialAction": {
      "@type": "SearchAction",
      "target": `${siteURL}/tools?search={search_term_string}`,
      "query-input": "required name=search_term_string"
    }
  })} />
  
  <style is:global>
    /* Global Dark Mode Variables */
    :root {
      --bg-primary: #f8fafc;
      --bg-secondary: #ffffff;
      --text-primary: #1e293b;
      --text-secondary: #475569;
      --border-color: #e2e8f0;
    }

    [data-theme="dark"] {
      --bg-primary: #0f172a;
      --bg-secondary: #1e293b;
      --text-primary: #f1f5f9;
      --text-secondary: #cbd5e1;
      --border-color: #334155;
    }

    body {
      background: var(--bg-primary) !important;
      color: var(--text-primary) !important;
      transition: background-color 0.3s ease, color 0.3s ease;
    }
  </style>

  <style>

    .ad-container {
      margin: 2rem auto;
      padding: 1rem;
      max-width: 1200px;
      text-align: center;
      background: var(--bg-secondary);
      border-radius: 0.5rem;
      border: 1px solid var(--border-color);
      min-height: 90px;
      transition: background-color 0.3s ease, border-color 0.3s ease;
    }

    .ad-container::before {
      content: "Anzeige";
      display: block;
      font-size: 0.8rem;
      color: var(--text-secondary);
      margin-bottom: 0.5rem;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .ad-between-sections {
      margin: 4rem auto;
      background: linear-gradient(135deg, var(--bg-secondary) 0%, var(--bg-primary) 100%);
    }

    .ad-in-grid {
      grid-column: 1 / -1;
      margin: 1rem 0;
    }

    .ad-pre-footer {
      margin: 3rem auto 1rem;
      background: #1a202c;
      color: white;
    }

    .ad-pre-footer::before {
      color: #a0aec0;
    }

    @media (max-width: 768px) {
      .ad-container {
        margin: 1.5rem auto;
        padding: 0.5rem;
        min-height: 50px;
      }
      
      .ad-between-sections {
        margin: 2rem auto;
      }
    }

    img, iframe, video {
      max-width: 100%;
      height: auto;
    }
  </style>
</head>
<body style="background: var(--bg-primary, #f8fafc); padding-top: 70px;">
  <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-M8SMR588"
  height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>

  <Navigation />

  <main>
    <slot />
  </main>
  
  <footer style="background: #1e293b; color: #f1f5f9; padding: 2rem 0; margin-top: 4rem; border-top: 1px solid var(--border-color); transition: all 0.3s ease;">
    <div style="max-width: 1400px; margin: 0 auto; padding: 0 2rem; text-align: center;">
      <p>&copy; 2024 AI Tool Vault. Alle Rechte vorbehalten.</p>
    </div>
  </footer>

  <script is:inline data-cookieconsent="ignore">
    document.addEventListener('DOMContentLoaded', function() {
      const ads = document.querySelectorAll('.adsbygoogle');
      
      const observer = new IntersectionObserver(function(entries) {
        entries.forEach(function(entry) {
          if (entry.isIntersecting && !entry.target.getAttribute('data-loaded')) {
            if (Cookiebot && Cookiebot.consent && Cookiebot.consent.marketing) {
              try {
                if (typeof adsbygoogle !== 'undefined') {
                  (adsbygoogle = window.adsbygoogle || []).push({});
                  entry.target.setAttribute('data-loaded', 'true');
                }
              } catch (e) {
                console.warn('AdSense loading error:', e);
              }
              observer.unobserve(entry.target);
            }
          }
        });
      }, { 
        threshold: 0.1,
        rootMargin: '50px'
      });
      
      ads.forEach(function(ad) {
        observer.observe(ad);
      });
    });
  </script>
</body>
</html>
