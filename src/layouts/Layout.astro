---
export interface Props {
  title: string;
  description?: string;
  image?: string;
  canonicalURL?: string;
  type?: 'website' | 'article';
}

const { 
  title, 
  description = "Die besten KI-Tools entdecken", 
  image = "/og-image.jpg",
  canonicalURL = Astro.url.href,
  type = 'website'
} = Astro.props;

const siteName = "AI Tool Vault";
const siteURL = "https://aitoolvault.de";
---

<!DOCTYPE html>
<html lang="de">

<!-- Google tag (gtag.js) -->
<script async src="https://www.googletagmanager.com/gtag/js?id=G-EC62QPK5VL"></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', 'G-EC62QPK5VL');
</script>

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  
  <!-- Primary Meta Tags -->
  <title>{title}</title>
  <meta name="title" content={title} />
  <meta name="description" content={description} />
  <meta name="keywords" content="KI-Tools, AI Tools, künstliche Intelligenz, ChatGPT, Claude, Midjourney, AI Vergleich" />
  <meta name="author" content="AI Tool Vault" />
  <meta name="robots" content="index, follow" />
  <link rel="canonical" href={canonicalURL} />
  
  <!-- Open Graph / Facebook -->
  <meta property="og:type" content={type} />
  <meta property="og:url" content={canonicalURL} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={`${siteURL}${image}`} />
  <meta property="og:site_name" content={siteName} />
  <meta property="og:locale" content="de_DE" />
  
  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:url" content={canonicalURL} />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={`${siteURL}${image}`} />
  
  <!-- Favicon -->
  <link rel="icon" type="image/x-icon" href="/favicon.ico" />
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
  
  <!-- Performance: Preconnect zu kritischen Domains -->
  <link rel="preconnect" href="https://pagead2.googlesyndication.com" crossorigin>
  <link rel="preconnect" href="https://www.googletagmanager.com" crossorigin>
  <link rel="dns-prefetch" href="https://www.google-analytics.com">
  <link rel="dns-prefetch" href="https://googleads.g.doubleclick.net">
  <link rel="dns-prefetch" href="https://www.clarity.ms">
  
  <!-- Google Analytics - Performance-optimiert (verzögert) -->
  <script is:inline>
    // Verzögere Analytics bis Seite geladen ist
    window.addEventListener('load', function() {
      setTimeout(function() {
        const script = document.createElement('script');
        script.src = 'https://www.googletagmanager.com/gtag/js?id=G-EC62QPK5VL';
        script.async = true;
        document.head.appendChild(script);
        
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', 'G-EC62QPK5VL', {
          'send_page_view': true,
          'anonymize_ip': true
        });
      }, 2000); // 2 Sekunden Verzögerung
    });
  </script>

  <!-- Google AdSense - Performance-optimiert (verzögert) -->
  <script is:inline>
    // Verzögere AdSense bis User interagiert oder nach 3 Sekunden
    (function() {
      let adsLoaded = false;
      
      function loadAds() {
        if (adsLoaded) return;
        adsLoaded = true;
        
        const script = document.createElement('script');
        script.src = 'https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-5595876978844902';
        script.async = true;
        script.crossOrigin = 'anonymous';
        script.onerror = function() {
          console.log('AdSense blocked - this is normal with ad blockers');
        };
        document.head.appendChild(script);
      }
      
      // Lade AdSense nach 3 Sekunden
      window.addEventListener('load', function() {
        setTimeout(loadAds, 3000);
      });
      
      // ODER bei erster User-Interaktion (was auch immer zuerst kommt)
      ['scroll', 'click', 'touchstart', 'mousemove'].forEach(function(event) {
        window.addEventListener(event, loadAds, { once: true, passive: true });
      });
    })();
  </script>

  <!-- Microsoft Clarity - UX Analytics -->
  <script type="text/javascript" is:inline>
    (function(c,l,a,r,i,t,y){
      c[a]=c[a]||function(){(c[a].q=c[a].q||[]).push(arguments)};
      t=l.createElement(r);t.async=1;t.src="https://www.clarity.ms/tag/"+i;
      y=l.getElementsByTagName(r)[0];y.parentNode.insertBefore(t,y);
    })(window, document, "clarity", "script", "p7h0pwb5x7");
  </script>
  
  <!-- Structured Data / JSON-LD -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "WebSite",
    "name": siteName,
    "url": siteURL,
    "description": "Entdecken Sie die besten KI-Tools für Ihr Business. Vergleichen Sie Preise, Features und Bewertungen.",
    "potentialAction": {
      "@type": "SearchAction",
      "target": `${siteURL}/tools?search={search_term_string}`,
      "query-input": "required name=search_term_string"
    }
  })} />
  
  <style>
    /* AdSense Container Styling */
    .ad-container {
      margin: 2rem auto;
      padding: 1rem;
      max-width: 1200px;
      text-align: center;
      background: #f8fafc;
      border-radius: 0.5rem;
      border: 1px solid #e2e8f0;
      min-height: 90px;
    }

    .ad-container::before {
      content: "Anzeige";
      display: block;
      font-size: 0.8rem;
      color: #666;
      margin-bottom: 0.5rem;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .ad-between-sections {
      margin: 4rem auto;
      background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
    }

    .ad-in-grid {
      grid-column: 1 / -1;
      margin: 1rem 0;
    }

    .ad-pre-footer {
      margin: 3rem auto 1rem;
      background: #1a202c;
      color: white;
    }

    .ad-pre-footer::before {
      color: #a0aec0;
    }

    .sidebar-ads {
      position: fixed;
      right: 2rem;
      top: 50%;
      transform: translateY(-50%);
      width: 300px;
      z-index: 100;
    }

    .sticky-ad {
      position: sticky;
      top: 100px;
    }

    @media (max-width: 1400px) {
      .sidebar-ads {
        display: none;
      }
    }

    @media (max-width: 768px) {
      .ad-container {
        margin: 1.5rem auto;
        padding: 0.5rem;
        min-height: 50px;
      }
      
      .ad-between-sections {
        margin: 2rem auto;
      }
    }

    /* Performance: Reduce layout shifts */
    img, iframe, video {
      max-width: 100%;
      height: auto;
    }
  </style>
</head>
<body class="bg-gray-50">
  <header class="bg-white shadow-sm">
    <div class="max-w-7xl mx-auto px-4 py-4">
      <nav class="flex justify-between items-center">
        <a href="/" class="text-2xl font-bold text-purple-600">
          AI Tool Vault
        </a>
        <div class="space-x-6">
          <a href="/" class="text-gray-600 hover:text-purple-600">Home</a>
          <a href="/tools" class="text-gray-600 hover:text-purple-600">Tools</a>
        </div>
      </nav>
    </div>
  </header>
  
  <main>
    <slot />
  </main>
  
  <footer class="bg-gray-800 text-white py-8 mt-16">
    <div class="max-w-7xl mx-auto px-4 text-center">
      <p>&copy; 2024 AI Tool Vault. Alle Rechte vorbehalten.</p>
    </div>
  </footer>

  <!-- AdSense Initialization - Lazy Loading -->
  <script is:inline>
    document.addEventListener('DOMContentLoaded', function() {
      const ads = document.querySelectorAll('.adsbygoogle');
      
      // Intersection Observer für lazy loading
      const observer = new IntersectionObserver(function(entries) {
        entries.forEach(function(entry) {
          if (entry.isIntersecting && !entry.target.getAttribute('data-loaded')) {
            try {
              if (typeof adsbygoogle !== 'undefined') {
                (adsbygoogle = window.adsbygoogle || []).push({});
                entry.target.setAttribute('data-loaded', 'true');
              }
            } catch (e) {
              console.warn('AdSense loading error (normal with ad blockers):', e);
            }
            observer.unobserve(entry.target);
          }
        });
      }, { 
        threshold: 0.1,
        rootMargin: '50px'
      });
      
      ads.forEach(function(ad) {
        observer.observe(ad);
      });
    });
  </script>
</body>
</html>

